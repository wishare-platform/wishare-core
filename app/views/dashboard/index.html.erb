<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-4">
      Dashboard
    </h1>
    <p class="text-gray-600 dark:text-gray-400">
      Content will be added here step by step.
    </p>
  </div>

  <!-- User Profile Card -->
  <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-xl shadow-sm border border-rose-100 dark:border-gray-700 p-6 mb-8">
    <div class="flex flex-col sm:flex-row items-center gap-6">
      <!-- User Avatar -->
      <div class="flex-shrink-0">
        <%= user_avatar_or_initials(@user, size: 'w-32 h-32') %>
      </div>

      <!-- User Info -->
      <div class="flex-grow text-center sm:text-left">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-1">
          <%= @user.name %>
        </h2>
        <p class="text-gray-600 dark:text-gray-400 mb-2">
          <%= @user.email %>
        </p>
        <p class="text-sm text-gray-500 dark:text-gray-400">
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Member since <%= @user.created_at.strftime("%B %Y") %>
        </p>
      </div>

      <!-- Quick Actions -->
      <div class="flex flex-col sm:flex-row gap-3">
        <%= link_to "Edit Profile", edit_user_registration_path,
            class: "inline-flex items-center gap-2 px-4 py-2 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 rounded-lg font-medium text-sm transition-colors duration-200" %>
      </div>
    </div>

    <!-- Bio Section (if present) -->
    <% if @user.respond_to?(:bio) && @user.bio.present? %>
      <div class="mt-6 pt-6 border-t border-rose-100 dark:border-gray-700">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">Bio</h3>
        <p class="text-gray-600 dark:text-gray-400"><%= @user.bio %></p>
      </div>
    <% end %>

    <!-- Quick Stats -->
    <div class="mt-6">
      <div class="flex gap-8">
        <div class="text-center">
          <div class="text-sm font-bold text-gray-900 dark:text-gray-100">Wishlists</div>
          <div class="text-lg text-gray-600 dark:text-gray-400"><%= @user.wishlists.count %></div>
        </div>
        <div class="text-center">
          <div class="text-sm font-bold text-gray-900 dark:text-gray-100">Items</div>
          <div class="text-lg text-gray-600 dark:text-gray-400"><%= @user.wishlists.joins(:wishlist_items).count %></div>
        </div>
        <div class="text-center">
          <div class="text-sm font-bold text-gray-900 dark:text-gray-100">Connections</div>
          <div class="text-lg text-gray-600 dark:text-gray-400"><%= @user.connections.accepted.count %></div>
        </div>
      </div>
    </div>
  </div>
</div>
