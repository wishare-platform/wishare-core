<!-- Mobile Profile Summary - Compact horizontal card -->
<div class="bg-white/95 dark:bg-gray-800/95 backdrop-blur-sm rounded-xl shadow-sm border border-rose-100 dark:border-gray-700 p-4">
  <div class="flex items-center gap-4">
    <!-- Compact Avatar -->
    <div class="flex-shrink-0">
      <%= user_avatar_or_initials(@user, size: 'w-16 h-16') %>
    </div>

    <!-- Essential Info -->
    <div class="flex-1 min-w-0">
      <h2 class="heading-card text-gray-800 dark:text-gray-100 truncate">
        <%= @user.name %>
      </h2>
      <p class="text-body-sm text-gray-500 dark:text-gray-400 mb-2">
        <%= t('dashboard.sidebar.profile.member_since') %> <%= @user.created_at.strftime("%B %Y") %>
      </p>

      <!-- Inline Stats -->
      <div class="flex items-center gap-4 text-xs">
        <div class="flex items-center gap-1">
          <span class="font-semibold text-rose-600 dark:text-rose-400"><%= @user.wishlists.count %></span>
          <span class="text-gray-500 dark:text-gray-400"><%= t('dashboard.sidebar.stats.wishlists') %></span>
        </div>
        <div class="flex items-center gap-1">
          <span class="font-semibold text-rose-600 dark:text-rose-400"><%= (@connections.size + @inverse_connections.size) %></span>
          <span class="text-gray-500 dark:text-gray-400"><%= t('dashboard.sidebar.stats.friends') %></span>
        </div>
      </div>
    </div>

    <!-- Profile Completion (Compact) -->
    <% if @user.respond_to?(:profile_completion_percentage) %>
      <div class="flex-shrink-0 text-center">
        <div class="relative w-12 h-12">
          <svg class="w-12 h-12 transform -rotate-90" viewBox="0 0 36 36">
            <path class="text-gray-200 dark:text-gray-700"
                  stroke="currentColor" stroke-width="3" fill="none"
                  d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"/>
            <path class="text-rose-500"
                  stroke="currentColor" stroke-width="3" fill="none"
                  stroke-dasharray="<%= @user.profile_completion_percentage %>, 100"
                  d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"/>
          </svg>
          <div class="absolute inset-0 flex items-center justify-center">
            <span class="text-xs font-semibold text-gray-900 dark:text-gray-100">
              <%= @user.profile_completion_percentage %>%
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Bio (if present, truncated) with Show More -->
  <% if @user.respond_to?(:bio) && @user.bio.present? %>
    <div class="mt-3 pt-3 border-t border-rose-100 dark:border-gray-700">
      <div data-controller="expandable-text" data-expandable-text-limit-value="60">
        <p class="text-body-sm text-gray-600 dark:text-gray-400 leading-relaxed"
           data-expandable-text-target="content">
          <%= @user.bio %>
        </p>
        <% if @user.bio.length > 60 %>
          <button class="text-xs text-rose-600 dark:text-rose-400 hover:text-rose-700 dark:hover:text-rose-300 mt-1"
                  data-action="click->expandable-text#toggle"
                  data-expandable-text-target="toggleBtn">
            Show more
          </button>
        <% end %>
      </div>
    </div>
  <% end %>
</div>