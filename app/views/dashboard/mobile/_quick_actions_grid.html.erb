<!-- Mobile Quick Actions Grid - 2x2 optimized for touch -->
<div class="bg-white/95 dark:bg-gray-800/95 backdrop-blur-sm rounded-xl shadow-sm border border-rose-100 dark:border-gray-700 p-4">
  <h3 class="heading-sub text-gray-900 dark:text-gray-100 mb-4 flex items-center">
    <svg class="w-4 h-4 mr-2 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>
    <%= t('dashboard.sidebar.quick_actions.title') %>
  </h3>

  <!-- Primary Action (Featured) -->
  <div class="mb-4">
    <%= link_to new_wishlist_path,
        class: "w-full flex items-center gap-3 p-4 bg-gradient-to-r from-rose-500 to-pink-500 text-white rounded-xl hover:from-rose-600 hover:to-pink-600 transition-all duration-200 shadow-md hover:shadow-lg active:scale-95" do %>
      <div class="flex-shrink-0">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
      </div>
      <div class="flex-1 text-left">
        <div class="font-medium text-sm"><%= t('dashboard.sidebar.quick_actions.create_wishlist') %></div>
        <div class="text-xs opacity-90"><%= t('dashboard.quick_actions_descriptions.start_new_wishlist') %></div>
      </div>
      <div class="flex-shrink-0">
        <svg class="w-4 h-4 opacity-75" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    <% end %>
  </div>

  <!-- Secondary Actions (Compact 1x3 Grid) -->
  <div class="grid grid-cols-3 gap-2">
    <!-- Invite Friends -->
    <%= link_to new_invitation_path,
        class: "flex flex-col items-center gap-1 p-3 bg-white dark:bg-gray-700 border border-blue-200 dark:border-blue-800 text-blue-600 dark:text-blue-400 rounded-lg hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-200 shadow-sm active:scale-95 min-h-[60px] justify-center" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
      </svg>
      <span class="text-xs font-medium text-center leading-tight">
        <%= t('dashboard.sidebar.quick_actions.invite_friends').split.first %>
      </span>
    <% end %>

    <!-- Discover/Browse -->
    <%= link_to wishlists_path(filter: 'public'),
        class: "flex flex-col items-center gap-1 p-3 bg-white dark:bg-gray-700 border border-green-200 dark:border-green-800 text-green-600 dark:text-green-400 rounded-lg hover:bg-green-50 dark:hover:bg-green-900/20 transition-all duration-200 shadow-sm active:scale-95 min-h-[60px] justify-center" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
      <span class="text-xs font-medium text-center leading-tight">
        <%= t('dashboard.sidebar.quick_actions.discover') %>
      </span>
    <% end %>

    <!-- Profile -->
    <%= link_to edit_user_registration_path,
        class: "flex flex-col items-center gap-1 p-3 bg-white dark:bg-gray-700 border border-purple-200 dark:border-purple-800 text-purple-600 dark:text-purple-400 rounded-lg hover:bg-purple-50 dark:hover:bg-purple-900/20 transition-all duration-200 shadow-sm active:scale-95 min-h-[60px] justify-center" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      <span class="text-xs font-medium text-center leading-tight">
        <%= t('dashboard.sidebar.quick_actions.edit_profile').split.first %>
      </span>
    <% end %>
  </div>

  <!-- Optional: Quick Stats Row -->
  <div class="mt-4 pt-3 border-t border-rose-100 dark:border-gray-700">
    <div class="grid grid-cols-2 gap-4 text-center">
      <div>
        <span class="text-sm font-semibold text-gray-900 dark:text-gray-100">
          <%= @user.sent_invitations.count %>
        </span>
        <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('dashboard.sidebar.stats.invites_sent') %></div>
      </div>
      <div>
        <span class="text-sm font-semibold text-gray-900 dark:text-gray-100">
          <%= WishlistItem.joins(wishlist: :user).where(users: { id: @user.id }).where.not(purchased_by: nil).count %>
        </span>
        <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('dashboard.sidebar.stats.items_received') %></div>
      </div>
    </div>
  </div>
</div>