<!-- Quick Actions Section -->
<div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-xl shadow-sm border border-rose-100 dark:border-gray-700 p-6">
  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
    <svg class="w-5 h-5 mr-2 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>
    <%= t('dashboard.sidebar.quick_actions.title') %>
  </h3>

  <div class="space-y-3">
    <!-- Create Wishlist -->
    <%= link_to new_wishlist_path,
        class: "w-full flex items-center gap-3 p-3 bg-gradient-to-r from-rose-500 to-pink-500 text-white rounded-lg hover:from-rose-600 hover:to-pink-600 transition-all duration-200 shadow-sm hover:shadow-md group",
        data: {
          "dashboard-delight-target": "quickAction",
          "action-type": "create_wishlist",
          "action": "click->dashboard-delight#onQuickActionClick"
        } do %>
      <div class="flex-shrink-0">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
      </div>
      <div class="flex-1 text-left">
        <div class="font-medium text-sm"><%= t('dashboard.sidebar.quick_actions.create_wishlist') %></div>
        <div class="text-xs opacity-90"><%= t('dashboard.quick_actions_descriptions.start_new_wishlist') %></div>
      </div>
      <div class="flex-shrink-0 opacity-50 group-hover:opacity-100 transition-opacity">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    <% end %>

    <!-- Invite Friends -->
    <%= link_to new_invitation_path,
        class: "w-full flex items-center gap-3 p-3 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-200 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-all duration-200 shadow-sm hover:shadow-md group",
        data: {
          "dashboard-delight-target": "quickAction",
          "action-type": "invite_friends",
          "action": "click->dashboard-delight#onQuickActionClick"
        } do %>
      <div class="flex-shrink-0 text-blue-500">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
      </div>
      <div class="flex-1 text-left">
        <div class="font-medium text-sm"><%= t('dashboard.sidebar.quick_actions.invite_friends') %></div>
        <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('dashboard.quick_actions_descriptions.invite_friends') %></div>
      </div>
      <div class="flex-shrink-0 opacity-50 group-hover:opacity-100 transition-opacity text-gray-400">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    <% end %>

    <!-- Browse Public Wishlists -->
    <%= link_to wishlists_path(filter: 'public'),
        class: "w-full flex items-center gap-3 p-3 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-200 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-all duration-200 shadow-sm hover:shadow-md group",
        data: {
          "dashboard-delight-target": "quickAction",
          "action-type": "discover",
          "action": "click->dashboard-delight#onQuickActionClick"
        } do %>
      <div class="flex-shrink-0 text-green-500">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <div class="flex-1 text-left">
        <div class="font-medium text-sm"><%= t('dashboard.sidebar.quick_actions.discover') %></div>
        <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('dashboard.quick_actions_descriptions.discover') %></div>
      </div>
      <div class="flex-shrink-0 opacity-50 group-hover:opacity-100 transition-opacity text-gray-400">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    <% end %>

    <!-- My Wishlists -->
    <%= link_to wishlists_path,
        class: "w-full flex items-center gap-3 p-3 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-200 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-all duration-200 shadow-sm hover:shadow-md group",
        data: {
          "dashboard-delight-target": "quickAction",
          "action-type": "my_wishlists",
          "action": "click->dashboard-delight#onQuickActionClick"
        } do %>
      <div class="flex-shrink-0 text-indigo-500">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
      </div>
      <div class="flex-1 text-left">
        <div class="font-medium text-sm"><%= t('dashboard.sidebar.quick_actions.my_wishlists') %></div>
        <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('dashboard.quick_actions_descriptions.my_wishlists') %></div>
      </div>
      <div class="flex-shrink-0 opacity-50 group-hover:opacity-100 transition-opacity text-gray-400">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    <% end %>

    <!-- Edit Profile -->
    <%= link_to edit_user_registration_path,
        class: "w-full flex items-center gap-3 p-3 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-200 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-all duration-200 shadow-sm hover:shadow-md group",
        data: {
          "dashboard-delight-target": "quickAction",
          "action-type": "edit_profile",
          "action": "click->dashboard-delight#onQuickActionClick"
        } do %>
      <div class="flex-shrink-0 text-purple-500">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <div class="flex-1 text-left">
        <div class="font-medium text-sm"><%= t('dashboard.sidebar.quick_actions.edit_profile') %></div>
        <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('dashboard.quick_actions_descriptions.edit_profile') %></div>
      </div>
      <div class="flex-shrink-0 opacity-50 group-hover:opacity-100 transition-opacity text-gray-400">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    <% end %>
  </div>

  <!-- Action Statistics -->
  <div class="mt-6 pt-4 border-t border-rose-100 dark:border-gray-700">
    <div class="grid grid-cols-2 gap-4 text-center">
      <div>
        <div class="text-sm font-bold text-gray-900 dark:text-gray-100">
          <%= @user.sent_invitations.count %>
        </div>
        <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('dashboard.sidebar.stats.invites_sent') %></div>
      </div>
      <div>
        <div class="text-sm font-bold text-gray-900 dark:text-gray-100">
          <%= WishlistItem.joins(wishlist: :user).where(users: { id: @user.id }).where.not(purchased_by: nil).count %>
        </div>
        <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('dashboard.sidebar.stats.items_received') %></div>
      </div>
    </div>
  </div>
</div>