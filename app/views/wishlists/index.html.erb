              </svg>
              <%= t('wishlists.index.connected_wishlists') %> <span class="filter-count">(<%= @connected_wishlists.select(&:partner_only?).count %>)</span>
            </button>
          <% end %>
          
          <% if @connected_wishlists.any? || @public_wishlists.any? %>
            <button data-wishlist-filter-target="filterButton" data-filter="public" data-action="click->wishlist-filter#filterBy" class="btn-secondary bg-white text-gray-600 border border-gray-200 hover:bg-gray-50 px-4 py-2 rounded-xl transition duration-200 flex items-center gap-2">
