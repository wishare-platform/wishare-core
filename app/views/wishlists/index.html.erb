      <% unless @focus_partner %>
        <!-- Filter Buttons -->
        <div class="flex flex-wrap gap-2 mb-6">
          <button data-wishlist-filter-target="filterButton" data-filter="my-wishlists" data-action="click->wishlist-filter#filterBy" class="btn-primary bg-rose-500 text-white border border-rose-500 shadow-md px-4 py-2 rounded-xl transition duration-200 flex items-center gap-2">
