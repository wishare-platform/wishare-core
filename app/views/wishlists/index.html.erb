<% content_for :title, t('wishlists.index.title') %>
<% content_for :description, t('wishlists.index.subtitle') %>
<% content_for :structured_data, structured_data_website %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="wishlist-delight pull-to-refresh"
     data-wishlist-delight-celebration-ready-value="true"
     style="min-height: calc(100vh - 140px);">
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-8">
    <div>
      <% if @focus_partner %>
        <h1 class="heading-page text-gray-800 dark:text-gray-100"><%= @partner.name || t('common.user_fallbacks.friend') %>'s Wishlists</h1>
        <p class="text-body text-gray-600 dark:text-gray-400 mt-1"><%= t('wishlists.show.items_they_love') %></p>
      <% else %>
        <div data-wishlist-delight-target="headerContent">
        <h1 class="heading-page text-gray-800 dark:text-gray-100 flex items-center gap-3">
          <span data-wishlist-delight-target="titleEmoji" class="text-4xl animate-bounce">üéÅ</span>
          <%= t('wishlists.index.your_wishlists') %>
          <span data-wishlist-delight-target="celebrationBadge" class="hidden bg-gradient-to-r from-rose-500 to-pink-500 text-white text-sm px-3 py-1 rounded-full animate-pulse">‚ú® Amazing!</span>
        </h1>
        <p class="text-body text-gray-600 dark:text-gray-400 mt-1"><%= t('wishlists.index.subtitle') %></p>
      </div>
      <% end %>
    </div>
    <div class="flex gap-3">
      <% unless @focus_partner %>
        <%= link_to new_wishlist_path, class: "btn-primary bg-gradient-to-r from-rose-500 to-rose-600 text-white px-3 sm:px-4 py-2 rounded-xl hover:from-rose-600 hover:to-rose-700 transition duration-200 flex items-center gap-2 shadow-lg transform hover:scale-105 hover:shadow-xl", data: { "wishlist-delight-target": "createButton", action: "mouseenter->wishlist-delight#highlightCreateButton mouseleave->wishlist-delight#resetCreateButton" } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <span class="hidden xs:inline"><%= t('wishlists.index.new_wishlist') %></span>
          <span class="xs:hidden"><%= t('common.actions.new') || t('wishlists.index.new_wishlist') %></span>
        <% end %>
      <% end %>
      <% if @focus_partner %>
        <%= link_to wishlists_path, class: "bg-gray-100 text-gray-600 px-3 sm:px-4 py-2 rounded-lg hover:bg-gray-200 transition duration-200 flex items-center gap-2 text-sm sm:text-base" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          <span class="hidden sm:inline"><%= t('common.actions.back_to_my_wishlists') || t('common.actions.back') %></span>
          <span class="sm:hidden"><%= t('common.actions.back') %></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <% if @wishlists.any? || @connected_wishlists.any? || @public_wishlists.any? %>
    <div class="<%= @focus_partner ? '' : 'mt-12' %>" data-controller="wishlist-filter">
      <% unless @focus_partner %>
        <!-- Filter and Sort Section -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
          <!-- Filter Buttons -->
          <div class="flex flex-wrap gap-2">
          <button data-wishlist-filter-target="filterButton" data-filter="my-wishlists" data-action="click->wishlist-filter#filterBy" class="btn-secondary bg-white dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 px-4 py-2 rounded-xl transition duration-200 flex items-center gap-2 cursor-pointer">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
            <%= t('wishlists.index.your_wishlists') %> <span class="filter-count">(<%= @wishlists.count %>)</span>
          </button>
          
          <% if @connected_wishlists.any? %>
            <button data-wishlist-filter-target="filterButton" data-filter="friends-family" data-action="click->wishlist-filter#filterBy" class="btn-secondary bg-white dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 px-4 py-2 rounded-xl transition duration-200 flex items-center gap-2 cursor-pointer">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
              <%= t('wishlists.index.connected_wishlists') %> <span class="filter-count">(<%= @connected_wishlists.select(&:partner_only?).count %>)</span>
            </button>
          <% end %>
          
          <% if @connected_wishlists.any? || @public_wishlists.any? %>
            <button data-wishlist-filter-target="filterButton" data-filter="public" data-action="click->wishlist-filter#filterBy" class="btn-secondary bg-white dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 px-4 py-2 rounded-xl transition duration-200 flex items-center gap-2 cursor-pointer">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <%= t('wishlists.index.public_wishlists') %> <span class="filter-count">(<%= (@connected_wishlists.select(&:publicly_visible?) + @public_wishlists).count %>)</span>
            </button>
          <% end %>
          
          <button data-wishlist-filter-target="filterButton" data-filter="all" data-action="click->wishlist-filter#filterBy" class="btn-secondary bg-white dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 px-4 py-2 rounded-xl transition duration-200 flex items-center gap-2 cursor-pointer">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            <%= t('common.actions.all') || 'All' %> <span class="filter-count">(<%= (@wishlists + @connected_wishlists + @public_wishlists).count %>)</span>
          </button>
          </div>

          <!-- Sort Dropdown -->
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle" class="bg-white dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 px-4 py-2 rounded-xl transition duration-200 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"></path>
              </svg>
              <span><%= t('common.sort.sort_by', default: 'Sort by') %></span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>

            <div data-dropdown-target="menu" class="absolute right-0 mt-2 w-56 bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 py-2 hidden z-50">
              <%= link_to wishlists_path(sort_by: 'created_desc'), class: "block px-4 py-2 text-sm #{'bg-rose-50 dark:bg-rose-900/20 text-rose-600 dark:text-rose-400' if @sort_by == 'created_desc'} text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200" do %>
                <div class="flex items-center justify-between">
                  <span><%= t('common.sort.newest_first', default: 'Newest first') %></span>
                  <% if @sort_by == 'created_desc' %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>

              <%= link_to wishlists_path(sort_by: 'created_asc'), class: "block px-4 py-2 text-sm #{'bg-rose-50 dark:bg-rose-900/20 text-rose-600 dark:text-rose-400' if @sort_by == 'created_asc'} text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200" do %>
                <div class="flex items-center justify-between">
                  <span><%= t('common.sort.oldest_first', default: 'Oldest first') %></span>
                  <% if @sort_by == 'created_asc' %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>

              <%= link_to wishlists_path(sort_by: 'updated_desc'), class: "block px-4 py-2 text-sm #{'bg-rose-50 dark:bg-rose-900/20 text-rose-600 dark:text-rose-400' if @sort_by == 'updated_desc'} text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200" do %>
                <div class="flex items-center justify-between">
                  <span><%= t('common.sort.recently_updated', default: 'Recently updated') %></span>
                  <% if @sort_by == 'updated_desc' %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>

              <%= link_to wishlists_path(sort_by: 'name_asc'), class: "block px-4 py-2 text-sm #{'bg-rose-50 dark:bg-rose-900/20 text-rose-600 dark:text-rose-400' if @sort_by == 'name_asc'} text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200" do %>
                <div class="flex items-center justify-between">
                  <span><%= t('common.sort.name_a_z', default: 'Name (A-Z)') %></span>
                  <% if @sort_by == 'name_asc' %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>

              <%= link_to wishlists_path(sort_by: 'name_desc'), class: "block px-4 py-2 text-sm #{'bg-rose-50 dark:bg-rose-900/20 text-rose-600 dark:text-rose-400' if @sort_by == 'name_desc'} text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200" do %>
                <div class="flex items-center justify-between">
                  <span><%= t('common.sort.name_z_a', default: 'Name (Z-A)') %></span>
                  <% if @sort_by == 'name_desc' %>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      
      <% if @focus_partner %>
        <!-- Partner focus: Show as grid cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% (@connected_wishlists + @public_wishlists).each do |wishlist| %>
            <div class="bg-white rounded-xl border border-purple-100 hover:border-purple-200 transition duration-200 overflow-hidden">
              <div class="p-6">
                <div class="flex justify-between items-start mb-3">
                  <h3 class="heading-card text-gray-800">
                    <%= link_to wishlist.name, wishlist_path(wishlist), class: "hover:text-purple-600 transition duration-200" %>
                  </h3>
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                </div>
                
                <% if wishlist.description.present? %>
                  <p class="text-gray-600 text-sm mb-4"><%= truncate(wishlist.description, length: 200) %></p>
                <% end %>
                
                <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-4">
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                    </svg>
                    <%= t('wishlists.index.item_counts.available', count: wishlist.wishlist_items.available.count) %>
                  </div>
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= t('wishlists.index.item_counts.purchased', count: wishlist.wishlist_items.purchased.count) %>
                  </div>
                </div>
                
                <div class="flex gap-2">
                  <%= link_to t('wishlists.index.buttons.browse_items'), wishlist_path(wishlist), class: "flex-1 text-center bg-purple-600 text-white px-3 py-2 rounded-lg hover:bg-purple-700 transition duration-200 text-sm font-medium" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <!-- Unified Wishlist Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6">
          <!-- User's Own Wishlists -->
          <% @wishlists.each do |wishlist| %>
            <div data-wishlist-filter-target="wishlistCard" data-categories="my-wishlists all" class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-3xl border border-rose-100 dark:border-gray-700 hover:border-rose-200 dark:hover:border-gray-600 hover:shadow-xl transition duration-300 overflow-hidden group transform hover:scale-[1.02] hover:-translate-y-1"
               data-wishlist-delight-target="wishlistCard"
               data-action="mouseenter->wishlist-delight#onCardHover mouseleave->wishlist-delight#onCardLeave click->wishlist-delight#onCardClick"
               data-wishlist-id="<%= wishlist.id %>"
               data-wishlist-name="<%= wishlist.name %>">
              <!-- Cover Image -->
              <% if wishlist.cover_image.attached? %>
                <div class="h-32 sm:h-40 overflow-hidden">
                  <%= image_tag wishlist.cover_image_url(:card), class: "w-full h-full object-cover", alt: wishlist.name %>
                </div>
              <% end %>
              <div class="p-4 sm:p-6">
                <div class="flex justify-between items-start mb-3">
                  <h3 class="heading-card text-gray-800 dark:text-gray-100 pr-2 group-hover:text-rose-600 dark:group-hover:text-rose-400 transition-colors duration-200">
                    <%= link_to wishlist_path(wishlist), class: "flex items-center gap-2 hover:text-rose-600 dark:hover:text-rose-400 transition duration-200" do %>
                      <span data-wishlist-delight-target="cardEmoji" class="transform group-hover:scale-110 transition-transform duration-200">üéÅ</span>
                      <span><%= wishlist.name %></span>
                    <% end %>
                  </h3>
                  <div class="flex items-center gap-2 flex-shrink-0">
                    <% if wishlist.is_default %>
                      <span class="bg-gradient-to-r from-rose-100 to-rose-200 text-rose-700 text-xs px-2 py-1 rounded-full font-medium"><%= t('wishlists.index.default_badge') %></span>
                    <% end %>
                    
                    <!-- Three dots menu -->
                    <div class="relative" data-controller="dropdown">
                      <button data-action="click->dropdown#toggle" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 p-1 rounded-lg transition duration-200 cursor-pointer">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                        </svg>
                      </button>
                      
                      <!-- Dropdown Menu -->
                      <div data-dropdown-target="menu" class="absolute right-0 mt-1 w-48 bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-rose-100 dark:border-gray-700 py-2 hidden z-50">
                        <%= link_to edit_wishlist_path(wishlist), class: "block px-4 py-2 text-sm text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200" do %>
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            <%= t('wishlists.show.edit') %> <%= t('navigation.wishlists').singularize || 'Lista' %>
                          </div>
                        <% end %>
                        <%= link_to wishlist, data: { "turbo-method": "delete", confirm: t('wishlists.index.delete_confirmation', name: wishlist.name) }, class: "block px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition duration-200 cursor-pointer" do %>
                          <div class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            <%= t('wishlists.show.delete') %> <%= t('navigation.wishlists').singularize || 'Lista' %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                
                <% if wishlist.description.present? %>
                  <p class="text-gray-600 dark:text-gray-400 text-sm mb-4"><%= truncate(wishlist.description, length: 180) %></p>
                <% end %>
                
                <!-- Event Type and Countdown -->
                <% unless wishlist.general_wishlist? %>
                  <div class="bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 rounded-xl p-3 mb-4 border border-amber-200 dark:border-amber-800">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center gap-2">
                        <% if wishlist.event_type == 'birthday' %>
                          <span class="text-lg">üéÇ</span>
                        <% elsif wishlist.event_type == 'wedding' %>
                          <span class="text-lg">üíí</span>
                        <% elsif wishlist.event_type == 'baby_shower' %>
                          <span class="text-lg">üë∂</span>
                        <% elsif wishlist.event_type == 'christmas' %>
                          <span class="text-lg">üéÑ</span>
                        <% elsif wishlist.event_type == 'anniversary' %>
                          <span class="text-lg">üíï</span>
                        <% elsif wishlist.event_type == 'graduation' %>
                          <span class="text-lg">üéì</span>
                        <% elsif wishlist.event_type == 'housewarming' %>
                          <span class="text-lg">üè°</span>
                        <% elsif wishlist.event_type == 'valentines' %>
                          <span class="text-lg">üíù</span>
                        <% elsif wishlist.event_type == 'mothers_day' %>
                          <span class="text-lg">üå∏</span>
                        <% elsif wishlist.event_type == 'fathers_day' %>
                          <span class="text-lg">üëî</span>
                        <% else %>
                          <span class="text-lg">üéâ</span>
                        <% end %>
                        <span class="text-sm font-medium text-amber-700 dark:text-amber-400"><%= wishlist.event_type_display %></span>
                      </div>
                      <% if wishlist.event_date %>
                        <div class="text-right">
                          <% days_until = wishlist.days_until_event %>
                          <% if days_until && days_until >= 0 %>
                            <% if days_until == 0 %>
                              <span class="text-xs font-bold text-rose-600"><%= t('common.time.today') %></span>
                            <% elsif days_until <= 7 %>
                              <span class="text-xs font-bold text-orange-600"><%= t('wishlists.index.days_left', count: days_until) %></span>
                            <% elsif days_until <= 30 %>
                              <span class="text-xs font-semibold text-amber-600"><%= t('wishlists.index.days_left', count: days_until) %></span>
