<% content_for :title, wishlist_meta_title(@wishlist) %>
<% content_for :description, wishlist_meta_description(@wishlist) %>
<% content_for :og_title, wishlist_meta_title(@wishlist) %>
<% content_for :og_description, wishlist_meta_description(@wishlist) %>
<% content_for :og_image, meta_image_url(@wishlist) %>
<% content_for :twitter_title, wishlist_meta_title(@wishlist) %>
<% content_for :twitter_description, wishlist_meta_description(@wishlist) %>
<% content_for :twitter_image, meta_image_url(@wishlist) %>
<% content_for :structured_data, structured_data_wishlist(@wishlist) %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to wishlists_path, class: "inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-rose-600 dark:hover:text-rose-400 transition duration-200" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
<%= @wishlist.user == current_user ? t('wishlists.show.back_to_your_wishlists') : t('wishlists.show.back_to_their_wishlists') %>
    <% end %>
  </div>

  <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-3xl border border-rose-100 dark:border-gray-700 mb-8 shadow-lg overflow-hidden">
    <!-- Cover Image -->
    <% if @wishlist.cover_image.attached? %>
      <div class="h-48 sm:h-64 lg:h-80 overflow-hidden relative">
        <%= image_tag @wishlist.cover_image_url(:hero), class: "w-full h-full object-cover", alt: @wishlist.name %>
        <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent"></div>
      </div>
    <% end %>

    <div class="p-4 sm:p-8">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-4">
        <div class="flex items-start gap-4">
          <div class="bg-gradient-to-r from-rose-100 to-amber-100 dark:from-rose-900/30 dark:to-amber-900/30 rounded-full w-12 h-12 flex items-center justify-center flex-shrink-0">
            <% if @wishlist.user == current_user %>
              <svg class="w-6 h-6 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            <% else %>
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            <% end %>
          </div>
          <div class="min-w-0">
            <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-800 dark:text-gray-100 mb-2 break-words"><%= @wishlist.name %></h1>
            <% if @wishlist.description.present? %>
              <p class="text-gray-600 dark:text-gray-400 mb-4 text-sm sm:text-base"><%= @wishlist.description %></p>
            <% end %>
            <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 text-sm text-gray-500 dark:text-gray-400">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="truncate text-gray-600 dark:text-gray-400"><%= t('wishlists.show.created_by', date: l(@wishlist.created_at, format: :short), user: @wishlist.user.name || @wishlist.user.email) %></span>
              </span>
            </div>
          </div>
        </div>
        
        <div class="flex gap-2 flex-shrink-0 items-center">
          <!-- Share Button (visible to everyone) -->
          <%= share_modal_button(
                t('common.share.wishlist_title', name: @wishlist.user.name, wishlist_name: @wishlist.name),
                request.original_url,
                t('common.share.wishlist_description', event: @wishlist.event_type || 'any occasion'),
                t('common.share.button'),
                "inline-flex items-center gap-2 px-3 sm:px-4 py-2 bg-purple-500 hover:bg-purple-600 dark:bg-purple-600 dark:hover:bg-purple-700 text-white rounded-xl transition duration-200 font-medium text-sm sm:text-base shadow-lg"
              ) %>
              
          <% if @wishlist.user == current_user %>
            <%= link_to t('wishlists.show.add_item'), new_wishlist_wishlist_item_path(@wishlist), class: "bg-gradient-to-r from-rose-500 to-rose-600 text-white px-3 sm:px-4 py-2 rounded-xl hover:from-rose-600 hover:to-rose-700 transition duration-200 font-medium text-sm sm:text-base shadow-lg" %>
            
            <!-- Three dots menu -->
            <div class="relative" data-controller="dropdown">
              <button data-action="click->dropdown#toggle" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 p-2 rounded-lg transition duration-200 cursor-pointer">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                </svg>
              </button>
              
              <!-- Dropdown Menu -->
              <div data-dropdown-target="menu" class="absolute right-0 mt-1 w-48 bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-rose-100 dark:border-gray-700 py-2 hidden z-50">
                <%= link_to edit_wishlist_path(@wishlist), class: "block px-4 py-2 text-sm text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200" do %>
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    <%= t('wishlists.show.edit_wishlist') %>
                  </div>
                <% end %>
                <%= link_to @wishlist, data: { 
                      "turbo-method": "delete",
                      confirm: t('wishlists.show.delete_confirm', name: @wishlist.name),
                      controller: "analytics",
                      action: "click->analytics#trackWishlistDeleted",
                      "analytics-wishlist-id-param": @wishlist.id,
                      "analytics-wishlist-name-param": @wishlist.name,
                      "analytics-items-count-param": @wishlist.wishlist_items.count
                    }, 
                    class: "block px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition duration-200 cursor-pointer" do %>
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    <%= t('wishlists.show.delete_wishlist') %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-1"><%= t('wishlists.show.gift_ideas') %></h2>
    <p class="text-gray-600 dark:text-gray-400"><%= @wishlist.user == current_user ? t('wishlists.show.items_you_love') : t('wishlists.show.items_they_love') %></p>
  </div>

  <% if @wishlist_items.any? %>
    <!-- Filter and Sort Controls -->
    <div class="mb-6" data-controller="wishlist-items-filter">
      <!-- Sort and Filter Bar -->
      <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4 mb-4">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
          <!-- Filter Pills -->
          <div class="flex flex-wrap gap-2">
            <button data-action="click->wishlist-items-filter#filter"
                    data-filter="all"
                    data-wishlist-items-filter-target="filterButton"
                    class="px-3 py-1.5 text-sm font-medium rounded-full border transition-all duration-200 bg-rose-500 text-white border-rose-500">
              <%= t('wishlists.show.filters.all') %>
            </button>
            <button data-action="click->wishlist-items-filter#filter"
                    data-filter="available"
                    data-wishlist-items-filter-target="filterButton"
                    class="px-3 py-1.5 text-sm font-medium rounded-full border transition-all duration-200 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 cursor-pointer">
              <%= t('wishlists.show.filters.available') %>
            </button>
            <button data-action="click->wishlist-items-filter#filter"
                    data-filter="purchased"
                    data-wishlist-items-filter-target="filterButton"
                    class="px-3 py-1.5 text-sm font-medium rounded-full border transition-all duration-200 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 cursor-pointer">
              <%= t('wishlists.show.filters.purchased') %>
            </button>
            <div class="border-l border-gray-300 dark:border-gray-600 mx-1"></div>
            <button data-action="click->wishlist-items-filter#filter"
                    data-filter="high_priority"
                    data-wishlist-items-filter-target="filterButton"
                    class="px-3 py-1.5 text-sm font-medium rounded-full border transition-all duration-200 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 cursor-pointer">
              <%= t('wishlists.show.filters.high_priority') %>
            </button>
            <button data-action="click->wishlist-items-filter#filter"
                    data-filter="medium_priority"
                    data-wishlist-items-filter-target="filterButton"
                    class="px-3 py-1.5 text-sm font-medium rounded-full border transition-all duration-200 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 cursor-pointer">
              <%= t('wishlists.show.filters.medium_priority') %>
            </button>
            <button data-action="click->wishlist-items-filter#filter"
                    data-filter="low_priority"
                    data-wishlist-items-filter-target="filterButton"
                    class="px-3 py-1.5 text-sm font-medium rounded-full border transition-all duration-200 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 cursor-pointer">
              <%= t('wishlists.show.filters.low_priority') %>
            </button>
          </div>
          
          <!-- Sort Dropdown -->
          <div class="flex items-center gap-2">
            <label for="sort-select" class="text-sm text-gray-600 dark:text-gray-400 whitespace-nowrap"><%= t('wishlists.show.sort.label') %>:</label>
            <select id="sort-select"
                    data-action="change->wishlist-items-filter#sort"
                    data-wishlist-items-filter-target="sortSelect"
                    class="px-3 py-1.5 text-sm border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500">
              <option value="newest"><%= t('wishlists.show.sort.newest') %></option>
              <option value="oldest"><%= t('wishlists.show.sort.oldest') %></option>
              <option value="price_high"><%= t('wishlists.show.sort.price_high') %></option>
              <option value="price_low"><%= t('wishlists.show.sort.price_low') %></option>
              <option value="priority_high"><%= t('wishlists.show.sort.priority_high') %></option>
              <option value="priority_low"><%= t('wishlists.show.sort.priority_low') %></option>
              <option value="name_az"><%= t('wishlists.show.sort.name_az') %></option>
              <option value="name_za"><%= t('wishlists.show.sort.name_za') %></option>
            </select>
          </div>
        </div>
        
        <!-- Item Count -->
        <div class="mt-3 text-sm text-gray-600 dark:text-gray-400">
          <span id="filtered-item-count"><%= @wishlist_items.count %> <%= @wishlist_items.count == 1 ? 'item' : 'items' %></span>
        </div>
      </div>

      <!-- No Results Message -->
      <div data-wishlist-items-filter-target="noResults" class="hidden bg-gray-50 dark:bg-gray-800 rounded-xl p-8 text-center">
        <svg class="w-12 h-12 text-gray-400 dark:text-gray-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-gray-600 dark:text-gray-400"><%= t('wishlists.show.no_results') %></p>
        <button data-action="click->wishlist-items-filter#reset" class="mt-3 text-rose-600 dark:text-rose-400 hover:text-rose-700 dark:hover:text-rose-300 font-medium">
          <%= t('wishlists.show.clear_filters') %>
        </button>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
      <% @wishlist_items.each do |item| %>
        <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-100 dark:border-gray-700 hover:border-pink-200 dark:hover:border-rose-400 transition duration-200 overflow-hidden <%= 'opacity-75' if item.purchased? %>"
             data-wishlist-items-filter-target="item"
             data-name="<%= item.name %>"
             data-price="<%= item.formatted_price %>"
             data-priority="<%= item.priority %>"
             data-status="<%= item.purchased? ? 'purchased' : 'available' %>"
             data-created-at="<%= item.created_at.to_i %>">
          <% if item.image_url.present? %>
            <div class="relative">
              <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-48 object-cover">
              <% if item.purchased? %>
                <div class="absolute inset-0 bg-black bg-opacity-20 flex items-center justify-center">
                  <div class="bg-green-600 text-white px-3 py-1 rounded-full text-sm font-medium flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <%= t('wishlists.show.purchased') %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="w-full h-48 bg-gradient-to-br from-rose-50 via-pink-50 to-amber-50 dark:from-rose-900/20 dark:via-pink-900/20 dark:to-amber-900/20 flex flex-col items-center justify-center relative">
              <div class="text-4xl mb-2">💝</div>
              <div class="text-center">
                <div class="text-rose-500 dark:text-rose-400 font-bold text-lg font-display">Wishare</div>
                <div class="text-rose-400 dark:text-rose-500 text-sm font-medium"><%= t('wishlists.show.gift_placeholder') %></div>
              </div>
              <% if item.purchased? %>
                <div class="absolute inset-0 bg-black bg-opacity-20 flex items-center justify-center">
                  <div class="bg-green-600 text-white px-3 py-1 rounded-full text-sm font-medium flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <%= t('wishlists.show.purchased') %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <div class="p-4 sm:p-6">
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-base sm:text-lg font-semibold text-gray-800 dark:text-gray-100 flex-1 pr-2 break-words"><%= item.name %></h3>
              <% if @wishlist.user == current_user %>
                <div class="flex gap-1 flex-shrink-0">
                  <%= link_to edit_wishlist_wishlist_item_path(@wishlist, item), class: "text-gray-400 dark:text-gray-500 hover:text-rose-500 dark:hover:text-rose-400 transition duration-200 p-1", title: t('wishlists.show.edit_item') do %>
                    <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  <%= button_to wishlist_wishlist_item_path(@wishlist, item), {
                      method: :delete, 
                      data: { 
                        confirm: t('wishlists.show.delete_item_confirm', name: item.name),
                        controller: "analytics",
                        action: "click->analytics#trackItemRemoved",
                        "analytics-item-id-param": item.id,
                        "analytics-item-name-param": item.name
                      },
                      class: "text-gray-400 dark:text-gray-500 hover:text-red-500 dark:hover:text-red-400 transition duration-200 border-none bg-transparent p-1 cursor-pointer", 
                      title: t('wishlists.show.delete_item')
                    } do %>
                    <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <% if item.description.present? %>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-3"><%= truncate(item.description, length: 150) %></p>
            <% end %>
            
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 sm:gap-4 mb-4">
              <% if item.price.present? %>
                <span class="text-lg sm:text-xl font-bold text-gray-800 dark:text-gray-100"><%= item.formatted_price %></span>
              <% else %>
                <span class="text-sm text-gray-500 dark:text-gray-400"><%= t('wishlists.show.price_not_set') %></span>
              <% end %>
              
              <span class="text-xs px-2 sm:px-3 py-1 rounded-full font-semibold self-start sm:self-auto <%= item.priority == 'high' ? 'bg-rose-500 text-white border border-rose-600' : item.priority == 'medium' ? 'bg-rose-100 dark:bg-rose-900/30 text-rose-700 dark:text-rose-300 border border-rose-200 dark:border-rose-700' : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-200 dark:border-gray-600' %>">
                <%= t("items.form.priority_label.#{item.priority}") %>
              </span>
            </div>
            
            <% unless item.purchased? %>
              <div class="flex flex-col sm:flex-row gap-2">
                <% if item.safe_url.present? %>
                  <%= link_to item.safe_url, 
                      target: "_blank", 
                      rel: "noopener noreferrer",
                      data: {
                        controller: "analytics",
                        action: "click->analytics#trackExternalLinkClick",
                        "analytics-item-name-param": item.name
                      },
                      class: "flex-1 text-center bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-3 py-2 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition duration-200 text-sm font-medium flex items-center justify-center gap-2" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    <%= t('wishlists.show.view_item') %>
                  <% end %>
                <% end %>
                
                <% if @wishlist.user != current_user %>
                  <%= button_to purchase_wishlist_wishlist_item_path(@wishlist, item), {method: :patch, class: "flex-1 bg-rose-500 text-white px-3 py-2 rounded-lg hover:bg-rose-600 transition duration-200 text-sm font-medium cursor-pointer"} do %>
                    <span class="hidden xs:inline"><%= t('wishlists.show.mark_purchased') %></span>
                    <span class="xs:hidden"><%= t('wishlists.show.purchase') %></span>
                  <% end %>
                <% end %>
              </div>
              
              <!-- Share Item Button -->
              <div class="mt-2 flex justify-center">
                <%= share_modal_button(
                      t('common.share.item_title', item_name: item.name, wishlist_name: @wishlist.name),
                      wishlist_wishlist_item_url(@wishlist, item),
                      t('common.share.item_description', name: @wishlist.user.name, event: @wishlist.event_type || 'their wishlist'),
                      "💝",
                      "inline-flex items-center gap-1 px-2 py-1 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-600 dark:text-gray-300 text-xs rounded-lg transition duration-200"
                    ) %>
              </div>
            <% else %>
              <!-- Purchased item actions -->
              <% if item.purchased_by %>
                <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-700 rounded-lg p-3 text-sm">
                  <div class="flex items-center gap-2 mb-2">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-green-700 dark:text-green-300 font-medium"><%= t('wishlists.show.purchased_by', buyer: item.purchased_by.name || item.purchased_by.email) %></span>
                  </div>
                  <% if item.purchased_by == current_user %>
                    <%= button_to unpurchase_wishlist_wishlist_item_path(@wishlist, item), {method: :patch, 
                        class: "bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-3 py-1 rounded text-xs hover:bg-gray-200 dark:hover:bg-gray-600 transition duration-200"} do %>
                      <%= t('wishlists.show.mark_as_available') %>
                    <% end %>
                  <% elsif item.safe_url.present? %>
                    <%= link_to item.safe_url, 
                        target: "_blank", 
                        rel: "noopener noreferrer",
                        data: {
                          controller: "analytics",
                          action: "click->analytics#trackExternalLinkClick",
                          "analytics-item-name-param": item.name
                        },
                        class: "text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 text-xs flex items-center gap-1" do %>
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                      <%= t('wishlists.show.view_item') %>
                    <% end %>
                  <% end %>
                </div>
                
                <!-- Share Item Button for Purchased Items -->
                <div class="mt-2 flex justify-center">
                  <%= share_modal_button(
                        t('common.share.item_title', item_name: item.name, wishlist_name: @wishlist.name),
                        wishlist_wishlist_item_url(@wishlist, item),
                        t('common.share.item_description', name: @wishlist.user.name, event: @wishlist.event_type || 'their wishlist'),
                        "💝",
                        "inline-flex items-center gap-1 px-2 py-1 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-600 dark:text-gray-300 text-xs rounded-lg transition duration-200"
                      ) %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-rose-50 dark:bg-rose-900/20 rounded-xl p-12 text-center">
      <div class="bg-white dark:bg-gray-800 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
        <svg class="w-8 h-8 text-rose-500 dark:text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-2"><%= t('wishlists.show.no_items_yet') %></h3>
      <% if @wishlist.user == current_user %>
        <p class="text-gray-600 dark:text-gray-400 mb-6"><%= t('wishlists.show.no_items_description_owner') %></p>
        <%= link_to t('wishlists.show.add_first_item'), new_wishlist_wishlist_item_path(@wishlist), class: "bg-rose-500 text-white px-6 py-3 rounded-lg hover:bg-rose-600 transition duration-200 font-medium" %>
      <% else %>
        <p class="text-gray-600 dark:text-gray-400"><%= t('wishlists.show.no_items_description_visitor') %></p>
      <% end %>
    </div>
  <% end %>
</div>
