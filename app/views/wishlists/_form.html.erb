<%= form_with(model: wishlist, local: true, multipart: true,
              data: {
                controller: "analytics",
                action: "submit->analytics##{wishlist.persisted? ? 'trackWishlistEdited' : 'trackWishlistCreated'}"
              }) do |form| %>
  <% if wishlist.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-600 dark:text-red-400 px-4 py-3 rounded-xl mb-6">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="font-semibold mb-2 text-red-700 dark:text-red-300"><%= t('activerecord.errors.template.header', count: wishlist.errors.count, model: t('activerecord.models.wishlist', default: 'Wishlist')) %></h3>
          <ul class="list-disc list-inside space-y-1">
            <% wishlist.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :name, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-rose-50/30 dark:bg-rose-900/20 focus:bg-white dark:focus:bg-gray-700 text-gray-900 dark:text-gray-100", placeholder: t('wishlists.form.name_placeholder') %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 resize-none bg-rose-50/30 dark:bg-rose-900/20 focus:bg-white dark:focus:bg-gray-700 text-gray-900 dark:text-gray-100", placeholder: t('wishlists.form.description_placeholder') %>
  </div>

  <!-- Cover Image -->
  <div class="mb-6">
    <%= form.label :cover_image, t('wishlists.form.cover_image'), class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
    <div data-controller="image-upload" class="border-2 border-dashed border-rose-200 dark:border-rose-800 rounded-xl p-6 bg-rose-50/30 dark:bg-rose-900/20">
      <% if wishlist.cover_image.attached? %>
        <div class="text-center">
          <%= image_tag wishlist.cover_image_url(:card), class: "mx-auto rounded-lg shadow-md mb-4 max-h-48", data: { image_upload_target: "preview" } %>
          <button type="button" data-action="click->image-upload#removeImage" class="text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 text-sm font-medium">
            Remove Image
          </button>
        </div>
      <% else %>
        <div class="text-center" data-image-upload-target="dropZone">
          <svg class="w-12 h-12 text-gray-400 dark:text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <p class="text-gray-600 dark:text-gray-400 mb-2">Choose a cover image for your wishlist</p>
          <button type="button" data-action="click->image-upload#openFileDialog" class="bg-rose-500 hover:bg-rose-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition duration-200">
            Choose Image
          </button>
          <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">Recommended: 800x400px, JPG or PNG</p>
        </div>
      <% end %>
      <%= form.file_field :cover_image, data: { image_upload_target: "input", action: "change->image-upload#previewImage" }, class: "hidden", accept: "image/*" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div>
      <%= form.label :event_type, t('wishlists.form.event_type'), class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
      <%= form.select :event_type, options_for_select(Wishlist::EVENT_TYPES.map { |k, v| [I18n.t("wishlists.event_types.#{k}"), k] }, wishlist.event_type || 'none'), {}, 
          { class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100",
            data: { controller: "event-type", action: "change->event-type#toggleDateField" } } %>
      <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
        <p><%= t('wishlists.form.event_type_help') %></p>
      </div>
    </div>

    <div data-event-type-target="dateField" class="<%= 'hidden' if wishlist.event_type.nil? || wishlist.event_type == 'none' %>">
      <%= form.label :event_date, t('wishlists.form.event_date'), class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
      <%= form.date_field :event_date, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" %>
      <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
        <p><%= t('wishlists.form.event_date_help') %></p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div>
      <%= form.label :visibility, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
      <%= form.select :visibility, options_for_select([[t('wishlists.form.visibility_labels.publicly_visible'), 'publicly_visible'], [t('wishlists.form.visibility_labels.friends_and_family'), 'partner_only'], [t('wishlists.form.visibility_labels.private'), 'private_list']], wishlist.visibility), {}, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" %>
      <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
        <p><strong><%= t('wishlists.index.visibility.publicly_visible') %>:</strong> <%= t('wishlists.form.visibility_help.publicly_visible') %></p>
        <p><strong><%= t('wishlists.index.visibility.friends_and_family') %>:</strong> <%= t('wishlists.form.visibility_help.friends_and_family') %></p>
        <p><strong><%= t('wishlists.index.visibility.private') %>:</strong> <%= t('wishlists.form.visibility_help.private') %></p>
      </div>
    </div>

    <div class="flex items-center">
      <div class="bg-gradient-to-r from-rose-50 to-amber-50 dark:from-rose-900/20 dark:to-amber-900/20 p-4 rounded-xl w-full">
        <div class="flex items-start gap-3">
          <%= form.check_box :is_default, class: "h-4 w-4 text-rose-600 focus:ring-rose-500 border-rose-300 dark:border-rose-700 dark:bg-gray-700 rounded mt-0.5" %>
          <div>
            <%= form.label :is_default, t('wishlists.form.make_default'), class: "text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1"><%= t('wishlists.form.default_help') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit t('wishlists.form.save_button'), class: "bg-gradient-to-r from-rose-500 to-rose-600 text-white px-8 py-3 rounded-xl hover:from-rose-600 hover:to-rose-700 transition duration-200 cursor-pointer font-medium shadow-lg" %>
    <%= link_to t('wishlists.form.cancel_button'), wishlists_path, class: "bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-8 py-3 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition duration-200 font-medium" %>
  </div>
<% end %>