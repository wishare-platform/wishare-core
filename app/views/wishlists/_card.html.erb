<% items = wishlist.wishlist_items.load %>
<% available_count = items.count(&:available?) %>
<% purchased_count = items.count(&:purchased?) %>
<% total_items = items.size %>
<% recent_items = items.sort_by(&:created_at).reverse.first(3) %>

<div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-3xl border border-rose-100 dark:border-gray-700 hover:border-rose-200 dark:hover:border-gray-600 hover:shadow-xl transition duration-300 overflow-hidden">
  <!-- Cover Image -->
  <% if wishlist.cover_image.attached? %>
    <div class="h-40 overflow-hidden">
      <%= link_to wishlist_path(wishlist) do %>
        <%= image_tag wishlist.cover_image_url(:card), class: "w-full h-full object-cover hover:scale-105 transition duration-300", alt: wishlist.name %>
      <% end %>
    </div>
  <% else %>
    <div class="h-40 bg-gradient-to-br from-rose-400 to-purple-500 flex items-center justify-center">
      <%= link_to wishlist_path(wishlist), class: "text-white" do %>
        <svg class="w-16 h-16 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
        </svg>
      <% end %>
    </div>
  <% end %>

  <div class="p-6">
    <div class="flex justify-between items-start mb-3">
      <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 pr-2">
        <%= link_to wishlist.name, wishlist_path(wishlist), class: "hover:text-rose-600 dark:hover:text-rose-400 transition duration-200" %>
      </h3>
      <% if wishlist.event_type.present? %>
        <span class="bg-rose-100 dark:bg-rose-900/30 text-rose-600 dark:text-rose-400 text-xs px-2 py-1 rounded-full font-medium">
          <%= t("event_types.#{wishlist.event_type}") %>
        </span>
      <% end %>
    </div>

    <% if wishlist.description.present? %>
      <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-2"><%= wishlist.description %></p>
    <% end %>

    <!-- Stats -->
    <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-4">
      <div class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
        <span><%= available_count %> <%= t('wishlists.card.items') %></span>
      </div>
      <% if purchased_count > 0 %>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span><%= purchased_count %> <%= t('wishlists.card.purchased') %></span>
        </div>
      <% end %>
    </div>

    <!-- Progress Bar (if items exist) -->
    <% if total_items.positive? %>
      <% percentage = total_items.positive? ? (purchased_count.to_f / total_items * 100).round : 0 %>
      <div class="mb-4">
        <div class="flex justify-between text-xs mb-1">
          <span class="font-medium text-rose-600 dark:text-rose-400"><%= t('wishlists.card.progress') %></span>
          <span class="text-gray-500 dark:text-gray-400"><%= percentage %>%</span>
        </div>
        <div class="h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
          <div class="h-full bg-gradient-to-r from-rose-400 to-purple-500 transition-all duration-300" style="width: <%= percentage %>%"></div>
        </div>
      </div>
    <% end %>

    <!-- Item Previews with Hover Popup -->
    <% if recent_items.any? %>
      <div class="flex -space-x-2 mb-4" data-controller="wishlist-item-preview">
        <% recent_items.each_with_index do |item, index| %>
          <% if item.image_url.present? %>
            <%= link_to wishlist_wishlist_item_path(wishlist, item), class: "relative w-10 h-10 rounded-full border-2 border-white dark:border-gray-800 overflow-hidden hover:z-10 transition-transform hover:scale-110 cursor-pointer block",
                        data: {
                          action: "mouseenter->wishlist-item-preview#showPreview mouseleave->wishlist-item-preview#hidePreview click->wishlist-item-preview#handleClick",
                          item_id: item.id,
                          item_name: item.name,
                          item_price: item.formatted_price,
                          item_description: item.description,
                          item_image: item.image_url,
                          item_url: item.url,
                          item_priority: item.priority,
                          item_path: wishlist_wishlist_item_path(wishlist, item)
                        } do %>
              <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-full object-cover">
            <% end %>
          <% else %>
            <%= link_to wishlist_wishlist_item_path(wishlist, item), class: "relative w-10 h-10 rounded-full border-2 border-white dark:border-gray-800 bg-gray-200 dark:bg-gray-700 flex items-center justify-center hover:z-10 transition-transform hover:scale-110 cursor-pointer",
                        data: {
                          action: "mouseenter->wishlist-item-preview#showPreview mouseleave->wishlist-item-preview#hidePreview click->wishlist-item-preview#handleClick",
                          item_id: item.id,
                          item_name: item.name,
                          item_price: item.formatted_price,
                          item_description: item.description,
                          item_image: "",
                          item_url: item.url,
                          item_priority: item.priority,
                          item_path: wishlist_wishlist_item_path(wishlist, item)
                        } do %>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
              </svg>
            <% end %>
          <% end %>
        <% end %>
        <% remaining = total_items - recent_items.size %>
        <% if remaining.positive? %>
          <div class="w-10 h-10 rounded-full border-2 border-white dark:border-gray-800 bg-rose-100 dark:bg-rose-900/30 flex items-center justify-center">
            <span class="text-xs font-medium text-rose-600 dark:text-rose-400">+<%= remaining %></span>
          </div>
        <% end %>

      </div>
    <% end %>

    <!-- View Button -->
    <div class="flex gap-2">
      <%= link_to wishlist_path(wishlist), class: "flex-1 text-center bg-rose-500 text-white px-4 py-2 rounded-lg hover:bg-rose-600 transition duration-200 font-medium" do %>
        <%= t('wishlists.card.view_wishlist') %>
      <% end %>
    </div>
  </div>
</div>
