<% content_for :title, user_meta_title(@user) %>
<% content_for :description, user_meta_description(@user) %>
<% content_for :og_type, "profile" %>
<% content_for :og_title, user_meta_title(@user) %>
<% content_for :og_description, user_meta_description(@user) %>
<% content_for :og_image, meta_image_url(@user) %>
<% content_for :og_profile_username, @user.display_name %>
<% content_for :twitter_title, user_meta_title(@user) %>
<% content_for :twitter_description, user_meta_description(@user) %>
<% content_for :twitter_image, meta_image_url(@user) %>

<div class="bg-gradient-to-br from-rose-50 via-amber-50 to-purple-50 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950 min-h-screen">

  <!-- Profile Header Section -->
  <div class="relative">
    <!-- Cover Image -->
    <div class="h-48 md:h-64 bg-gradient-to-r from-rose-400 via-purple-500 to-indigo-500 relative">
      <!-- Optional: Add pattern overlay -->
      <div class="absolute inset-0 bg-black/20"></div>

      <!-- Back Button (for mobile) -->
      <%= link_to :back, class: "absolute top-4 left-4 p-2 bg-white/20 backdrop-blur-md rounded-lg text-white hover:bg-white/30 transition md:hidden" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>

      <!-- Edit Cover Button (if own profile) -->
      <% if current_user == @user %>
        <button class="absolute bottom-4 right-4 px-4 py-2 bg-white/20 backdrop-blur-md rounded-lg text-white hover:bg-white/30 transition flex items-center gap-2 text-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <%= t('users.public_profile.edit_cover') %>
        </button>
      <% end %>
    </div>

    <!-- Profile Info Container -->
    <div class="max-w-6xl mx-auto px-4 -mt-20 md:-mt-24 relative z-10">
      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl border border-rose-100 dark:border-gray-700 p-6">
        <!-- Top Section with Avatar -->
        <div class="flex flex-col md:flex-row md:items-start gap-6">
          <!-- Avatar -->
          <div class="relative">
            <% if @user.profile_avatar_url.present? %>
              <img src="<%= @user.profile_avatar_url %>"
                   alt="<%= @user.name %>"
                   class="w-32 h-32 md:w-40 md:h-40 rounded-full border-4 border-white dark:border-gray-800 shadow-lg">
            <% else %>
              <div class="w-32 h-32 md:w-40 md:h-40 rounded-full bg-gradient-to-br from-rose-400 to-purple-500 flex items-center justify-center border-4 border-white dark:border-gray-800 shadow-lg">
                <span class="text-white text-3xl md:text-4xl font-bold">
                  <%= @user.name.split(' ').map(&:first).join.upcase %>
                </span>
              </div>
            <% end %>
            <!-- Online indicator -->
            <div class="absolute bottom-2 right-2 w-6 h-6 bg-green-500 rounded-full border-3 border-white dark:border-gray-800"></div>
          </div>

          <!-- User Info -->
          <div class="flex-1">
            <div class="flex flex-col md:flex-row md:items-start justify-between gap-4">
              <div>
                <h1 class="text-2xl md:text-3xl font-bold text-gray-800 dark:text-gray-100"><%= @user.name %></h1>
                <p class="text-gray-500 dark:text-gray-400">@<%= @user.name.parameterize %></p>

                <!-- Stats -->
                <div class="flex flex-wrap gap-6 mt-4">
                  <div class="text-center md:text-left">
                    <p class="text-2xl font-bold text-gray-800 dark:text-gray-100"><%= @stats[:wishlists_count] %></p>
                    <p class="text-sm text-gray-500 dark:text-gray-400"><%= t('users.public_profile.stats.wishlists') %></p>
                  </div>
                  <div class="text-center md:text-left">
                    <p class="text-2xl font-bold text-gray-800 dark:text-gray-100"><%= @stats[:friends_count] %></p>
                    <p class="text-sm text-gray-500 dark:text-gray-400"><%= t('users.public_profile.stats.friends') %></p>
                  </div>
                  <div class="text-center md:text-left">
                    <p class="text-2xl font-bold text-gray-800 dark:text-gray-100"><%= @stats[:items_count] %></p>
                    <p class="text-sm text-gray-500 dark:text-gray-400"><%= t('users.public_profile.stats.items') %></p>
                  </div>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="flex gap-3">
                <% if current_user == @user %>
                  <!-- If own profile -->
                  <%= share_modal_button(
                        t('common.share.user_profile_title', name: @user.name),
                        request.original_url,
                        t('common.share.user_profile_description', name: @user.name),
                        t('common.share.button'),
                        "inline-flex items-center gap-2 px-6 py-2.5 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition font-medium"
                      ) %>
                  <%= link_to edit_user_registration_path, class: "px-6 py-2.5 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition font-medium" do %>
                    <%= t('users.public_profile.edit_profile') %>
                  <% end %>
                  <button class="p-2.5 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </button>
                <% else %>
                  <!-- If viewing someone else's profile -->
                  <button class="px-6 py-2.5 bg-rose-500 text-white rounded-lg hover:bg-rose-600 transition font-medium">
                    <%= t('users.public_profile.connect') %>
                  </button>
                  <%= share_modal_button(
                        t('common.share.user_profile_title', name: @user.name),
                        request.original_url,
                        t('common.share.user_profile_description', name: @user.name),
                        t('common.share.button'),
                        "inline-flex items-center gap-2 p-2.5 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition"
                      ) %>
                <% end %>
              </div>
            </div>

            <!-- Bio -->
            <% if @user.bio.present? %>
              <div class="mt-6 max-w-3xl">
                <p class="text-gray-700 dark:text-gray-300">
                  <%= @user.bio %>
                </p>
              </div>
            <% end %>

            <!-- Info Pills -->
            <div class="flex flex-wrap gap-2 mt-<%= @user.bio.present? ? '4' : '6' %>">
                <% if @user.city.present? || @user.state.present? %>
                  <span class="px-3 py-1 bg-rose-100 dark:bg-rose-900/30 text-rose-700 dark:text-rose-400 rounded-full text-sm">
                    üìç <%= [@user.city, @user.state].compact.join(', ') %>
                  </span>
                <% end %>
                <% if @user.date_of_birth.present? %>
                  <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-400 rounded-full text-sm">
                    üéÇ <%= t('users.public_profile.birthday_month', month: @user.date_of_birth.strftime('%B')) %>
                  </span>
                <% end %>
                <% if @user.website.present? %>
                  <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400 rounded-full text-sm">
                    üåê <%= @user.website.gsub(/https?:\/\//, '') %>
                  </span>
                <% end %>
            </div>

            <!-- Social Links -->
            <% if @user.has_social_links? %>
              <div class="flex gap-3 mt-6">
                <% @user.social_links.each do |platform, url| %>
                  <% next if url.blank? %>
                  <% if platform == :instagram %>
                    <a href="<%= url %>" target="_blank" class="p-2 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 hover:text-rose-600 dark:hover:text-rose-400 rounded-lg transition">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
                      </svg>
                    </a>
                  <% elsif platform == :twitter %>
                    <a href="<%= url %>" target="_blank" class="p-2 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 hover:text-rose-600 dark:hover:text-rose-400 rounded-lg transition">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                      </svg>
                    </a>
                  <% elsif platform == :linkedin %>
                    <a href="<%= url %>" target="_blank" class="p-2 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 hover:text-rose-600 dark:hover:text-rose-400 rounded-lg transition">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                      </svg>
                    </a>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>