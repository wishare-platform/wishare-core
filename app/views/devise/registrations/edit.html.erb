                </div>
              </div>
            </div>

            <div class="mt-4">
              <%= f.label :social_links_visibility, t('profile.social_links_visibility'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
              <%= f.select :social_links_visibility, options_for_select([
                [t('profile.visibility_options.private'), 'private'],
                [t('profile.visibility_options.connected_users'), 'connected_users'],
                [t('profile.visibility_options.public'), 'public']
              ], resource.social_links_visibility), {},
                  class: "w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition" %>
            </div>
          </div>
        </div>

        <!-- Address Information -->
        <div class="space-y-6 pt-6 border-t border-gray-200 dark:border-gray-700" 
             data-controller="address-lookup" 
             data-address-lookup-lookup-url-value="<%= address_lookups_lookup_path %>"
             data-address-lookup-csrf-token-value="<%= form_authenticity_token %>">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 flex items-center gap-2">
            <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <%= t('profile.edit.address.title') %>
          </h3>

          <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-4">
            <p class="text-sm text-blue-800 dark:text-blue-300">
              <%= t('profile.edit.address.description') %>
            </p>
          </div>

          <div class="grid gap-6">
            <!-- Address Visibility Setting -->
            <div>
              <%= f.label :address_visibility, t('profile.edit.address.visibility_label'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
