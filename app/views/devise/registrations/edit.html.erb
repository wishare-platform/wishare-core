                <div class="relative flex-1">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                    </svg>
                  </div>
                  <%= f.text_field :postal_code, 
                      required: true,
                      class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition",
                      placeholder: t('profile.edit.address.postal_code_placeholder'),
                      data: { address_lookup_target: "postalCode" } %>
                </div>
                <button type="button" 
                        class="px-4 py-3 bg-rose-500 text-white rounded-xl hover:bg-rose-600 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-2 transition text-sm font-medium whitespace-nowrap shadow-sm flex items-center gap-1.5"
                        data-address-lookup-target="lookupButton"
                        data-action="click->address-lookup#lookupAddress">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                  <span class="hidden sm:inline"><%= t('profile.edit.address.lookup_button') %></span>
                  <span class="sm:hidden">Buscar</span>
                </button>
              </div>
              <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">📍 <%= t('profile.edit.address.postal_code_help') %></p>
            </div>

            <!-- Address Fields -->
            <div class="space-y-6">
              <!-- Street Number and Apartment/Unit -->
              <div class="grid gap-4 sm:grid-cols-3">
                <div>
                  <%= f.label :street_number, t('profile.edit.address.street_number'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                      </svg>
                    </div>
                    <%= f.text_field :street_number,
                        required: true,
                        class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition",
                        placeholder: t('profile.edit.address.street_number_placeholder') %>
                  </div>
                </div>
                
                <div class="sm:col-span-2">
                  <%= f.label :apartment_unit, t('profile.edit.address.apartment_unit'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                      </svg>
                    </div>
                    <%= f.text_field :apartment_unit,
                        class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition",
                        placeholder: t('profile.edit.address.apartment_unit_placeholder') %>
                  </div>
                  <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">💡 <%= t('profile.edit.address.apartment_optional') if I18n.exists?('profile.edit.address.apartment_optional') %></p>
                </div>
              </div>

              <div>
                <%= f.label :street_address, t('profile.edit.address.street_address'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                  </div>
                  <%= f.text_area :street_address, rows: 2,
                      required: true,
                      class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition resize-none",
                      placeholder: t('profile.edit.address.street_address_placeholder'),
                      data: { address_lookup_target: "streetAddress" } %>
                </div>
              </div>

              <!-- City and State -->
              <div class="grid gap-4 sm:grid-cols-2">
                <div>
                  <%= f.label :city, t('profile.edit.address.city'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                      </svg>
                    </div>
                    <%= f.text_field :city,
                        required: true,
                        class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition",
                        placeholder: t('profile.edit.address.city_placeholder'),
                        data: { address_lookup_target: "city" } %>
                  </div>
                </div>

                <div>
                  <%= f.label :state, t('profile.edit.address.state'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                      </svg>
                    </div>
                    <%= f.text_field :state,
                        required: true,
                        class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition",
                        placeholder: t('profile.edit.address.state_placeholder'),
                        data: { address_lookup_target: "state" } %>
                  </div>
                </div>
              </div>
            </div>

            <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-xl p-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-amber-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.704-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <div>
                  <h4 class="text-sm font-semibold text-amber-800 dark:text-amber-300"><%= t('profile.edit.address.privacy_notice.title') %></h4>
                  <p class="text-sm text-amber-700 dark:text-amber-200 mt-1">
                    <%= t('profile.edit.address.privacy_notice.description') %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Security Settings -->
        <div class="space-y-6 pt-6 border-t border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 flex items-center gap-2">
            <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <% if current_user.oauth_only? %>
              <%= t('profile.edit.security_settings.title_oauth') %>
            <% else %>
              <%= t('profile.edit.security_settings.title') %>
            <% end %>
          </h3>

          <% if current_user.oauth_only? %>
            <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-4">
              <p class="text-sm text-blue-800 dark:text-blue-300">
                <%= t('profile.edit.security_settings.note_oauth') %>
              </p>
            </div>
          <% else %>
            <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-xl p-4">
              <p class="text-sm text-amber-800">
                <%= t('profile.edit.security_settings.note_regular') %>
              </p>
            </div>
          <% end %>

          <div class="space-y-4">
            <div>
              <%= f.label :password, current_user.oauth_only? ? t('profile.edit.form.password_oauth') : t('profile.edit.form.password'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 11v8m6-8v8M5 21h14"></path>
                  </svg>
                </div>
                <%= f.password_field :password, autocomplete: "new-password", 
                    class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition", 
                    placeholder: current_user.oauth_only? ? t('profile.edit.form.password_oauth_placeholder') : t('profile.edit.form.password_placeholder') %>
              </div>
              <% if @minimum_password_length %>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400"><%= t('profile.edit.form.password_minimum', minimum: @minimum_password_length) %></p>
              <% end %>
            </div>

            <div>
              <%= f.label :password_confirmation, t('profile.edit.form.password_confirmation'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                    class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition", 
                    placeholder: current_user.oauth_only? ? t('profile.edit.form.password_confirmation_oauth_placeholder') : t('profile.edit.form.password_confirmation_placeholder') %>
              </div>
            </div>

            <% unless current_user.oauth_only? %>
              <div>
                <%= f.label :current_password, t('profile.edit.form.current_password'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                  </div>
                  <%= f.password_field :current_password, autocomplete: "current-password", 
                      class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition", 
                      placeholder: t('profile.edit.form.current_password_placeholder') %>
                </div>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400"><%= t('profile.edit.form.current_password_help') %></p>
              </div>
            <% end %>
          </div>

          <% if current_user.provider.present? %>
            <div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-4">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2"><%= t('profile.edit.security_settings.connected_accounts') %></h4>
              <div class="flex items-center gap-3">
                <% if current_user.provider == 'google_oauth2' %>
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                      <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                      <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                      <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                      <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('profile.edit.security_settings.google_connected') %></span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-6">
          <%= f.submit t('profile.edit.form.save_changes'), class: "flex-1 bg-gradient-to-r from-rose-500 to-rose-600 text-white py-3 px-6 rounded-xl hover:from-rose-600 hover:to-rose-700 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-2 transition font-semibold cursor-pointer" %>
          <%= link_to t('profile.edit.form.cancel'), wishlists_path, class: "flex-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 py-3 px-6 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition font-semibold text-center" %>
        </div>
      <% end %>

      <!-- Danger Zone -->
      <div class="border-t border-gray-200 dark:border-gray-700 bg-red-50/50 dark:bg-red-900/20 px-6 py-6 sm:px-8">
        <h3 class="text-lg font-semibold text-red-800 dark:text-red-300 mb-3"><%= t('profile.edit.danger_zone.title') %></h3>
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-700 dark:text-gray-300"><%= t('profile.edit.danger_zone.description') %></p>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1"><%= t('profile.edit.danger_zone.warning') %></p>
          </div>
          <%= button_to t('profile.edit.form.delete_account'), registration_path(resource_name), 
              data: { turbo_confirm: t('profile.edit.form.delete_confirm') }, 
              method: :delete,
              class: "bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition text-sm font-medium" %>
        </div>
      </div>
    </div>
  </div>
</div>