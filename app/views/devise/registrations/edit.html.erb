<div class="min-h-screen bg-gradient-to-br from-rose-50 via-amber-50 to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
  <div class="max-w-4xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-3xl shadow-xl border border-rose-100 dark:border-gray-700 overflow-hidden">
      
      <!-- Header -->
      <div class="bg-gradient-to-r from-rose-500 to-purple-600 px-6 py-8 sm:px-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-white"><%= t('profile.edit.title') %></h1>
            <p class="mt-2 text-rose-100"><%= t('profile.edit.subtitle') %></p>
          </div>
          <%= link_to wishlists_path, class: "text-white hover:text-rose-100 transition" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          <% end %>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "p-6 sm:p-8 space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Avatar Section -->
        <div class="flex flex-col items-center pb-6 border-b border-gray-200 dark:border-gray-700">
          <div class="relative">
            <% if current_user.avatar_url.present? %>
              <img src="<%= current_user.avatar_url %>" alt="Avatar" class="w-24 h-24 rounded-full border-4 border-rose-200 dark:border-rose-800">
            <% else %>
              <div class="w-24 h-24 rounded-full bg-gradient-to-br from-rose-400 to-purple-500 flex items-center justify-center border-4 border-rose-200 dark:border-rose-800">
                <span class="text-3xl font-bold text-white"><%= current_user.display_name.first.upcase %></span>
              </div>
            <% end %>
            <div class="absolute bottom-0 right-0 bg-rose-500 rounded-full p-2 cursor-pointer hover:bg-rose-600 transition">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
          </div>
          <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
            <% if current_user.provider == 'google_oauth2' %>
              <%= t('profile.edit.avatar.google_source') %>
            <% else %>
              <%= t('profile.edit.avatar.click_to_change') %>
            <% end %>
          </p>
        </div>

        <!-- Personal Information -->
        <div class="space-y-6">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 flex items-center gap-2">
            <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <%= t('profile.edit.personal_information') %>
          </h3>

          <div class="grid gap-6">
            <div class="grid gap-6 sm:grid-cols-2">
              <div>
                <%= f.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <%= f.text_field :name, autofocus: true, class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition", placeholder: t('profile.edit.form.name_placeholder') %>
                </div>
              </div>

              <div>
                <%= f.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <%= f.email_field :email, autocomplete: "email", class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition", placeholder: t('profile.edit.form.email_placeholder') %>
                </div>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p class="mt-2 text-sm text-amber-600 dark:text-amber-400">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>
              </div>
            </div>

            <div class="grid gap-6 sm:grid-cols-2">
              <div>
                <%= f.label :date_of_birth, t('profile.edit.form.birthday'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <div class="flex gap-2" data-controller="birthday">
                  <!-- Month -->
                  <div class="flex-1">
                    <select id="birth_month" 
                      class="w-full px-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition" 
                      data-action="change->birthday#updateDate">
                      <option value=""><%= t('profile.edit.form.month') %></option>
                      <% 1.upto(12) do |month| %>
                        <option value="<%= month %>" <%= 'selected' if f.object.date_of_birth&.month == month %>>
                          <%= Date::MONTHNAMES[month] %>
                        </option>
                      <% end %>
                    </select>
                  </div>
                  
                  <!-- Day -->
                  <div class="w-20">
                    <select id="birth_day" 
                      class="w-full px-2 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition" 
                      data-action="change->birthday#updateDate">
                      <option value=""><%= t('profile.edit.form.day') %></option>
                      <% 1.upto(31) do |day| %>
                        <option value="<%= day %>" <%= 'selected' if f.object.date_of_birth&.day == day %>><%= day %></option>
                      <% end %>
                    </select>
                  </div>
                  
                  <!-- Year -->
                  <div class="w-24">
                    <select id="birth_year" 
                      class="w-full px-2 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition" 
                      data-action="change->birthday#updateDate">
                      <option value=""><%= t('profile.edit.form.year') %></option>
                      <% (Date.current.year - 100).upto(Date.current.year - 13) do |year| %>
                        <option value="<%= year %>" <%= 'selected' if f.object.date_of_birth&.year == year %>><%= year %></option>
                      <% end %>
                    </select>
                  </div>
                </div>
                
                <!-- Hidden field to store the actual date -->
                <%= f.hidden_field :date_of_birth, data: { birthday_target: "hiddenField" } %>
                
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">📅 <%= t('profile.edit.form.birthday_help') %></p>
              </div>

              <div class="max-w-xs">
                <%= f.label :preferred_locale, t('profile.edit.form.preferred_language'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
                    </svg>
                  </div>
                  <%= f.select :preferred_locale, options_for_select([
                    ['🇺🇸 English', 'en'],
                    ['🇧🇷 Português', 'pt-BR']
                  ], f.object.preferred_locale || I18n.default_locale.to_s), 
                  {}, 
                  { class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition" } %>
                </div>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">🌍 <%= t('profile.edit.form.language_help') %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Bio & Social Media -->
        <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <%= t('profile.bio_and_social') %>
          </h3>

          <!-- Bio Section -->
          <div class="mb-6">
            <%= f.label :bio, t('profile.bio'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <div class="relative">
              <%= f.text_area :bio, rows: 4, maxlength: 500,
                  class: "w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition resize-none",
                  placeholder: t('profile.bio_placeholder'),
                  data: { controller: "character-counter", character_counter_max_value: 500 } %>
              <div class="absolute bottom-3 right-3 text-xs text-gray-500 dark:text-gray-400">
                <span data-character-counter-target="count">0</span>/500
              </div>
            </div>

            <div class="mt-2">
              <%= f.label :bio_visibility, t('profile.bio_visibility'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
              <%= f.select :bio_visibility, options_for_select([
                [t('profile.visibility_options.private'), 'private'],
                [t('profile.visibility_options.connected_users'), 'connected_users'],
                [t('profile.visibility_options.public'), 'public']
              ], resource.bio_visibility), {},
                  class: "w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition" %>
            </div>
          </div>

          <!-- Gender -->
          <div class="mb-6">
            <%= f.label :gender, t('profile.gender'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.select :gender, options_for_select([
              [t('profile.gender_options.not_specified'), 'not_specified'],
              [t('profile.gender_options.male'), 'male'],
              [t('profile.gender_options.female'), 'female'],
              [t('profile.gender_options.non_binary'), 'non_binary'],
              [t('profile.gender_options.prefer_not_to_say'), 'prefer_not_to_say']
            ], resource.gender), {},
                class: "w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition" %>
          </div>

          <!-- Website -->
          <div class="mb-6">
            <%= f.label :website, t('profile.website'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.text_field :website,
                class: "w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition",
                placeholder: t('profile.website_placeholder') %>

            <div class="mt-2">
              <%= f.label :website_visibility, t('profile.website_visibility'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
              <%= f.select :website_visibility, options_for_select([
                [t('profile.visibility_options.private'), 'private'],
                [t('profile.visibility_options.connected_users'), 'connected_users'],
                [t('profile.visibility_options.public'), 'public']
              ], resource.website_visibility), {},
                  class: "w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition" %>
            </div>
          </div>

          <!-- Social Media Links -->
          <div class="space-y-4">
            <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300"><%= t('profile.social_media_links') %></h4>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <!-- Instagram -->
              <div class="relative">
                <%= f.label :instagram_username, t('profile.instagram'), class: "block text-xs font-medium text-gray-600 dark:text-gray-400 mb-1" %>
                <div class="flex">
                  <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
                    </svg>
                  </span>
                  <%= f.text_field :instagram_username,
                      class: "flex-1 px-3 py-2.5 border-2 border-gray-200 dark:border-gray-600 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition dark:bg-gray-700 dark:text-gray-100 text-sm",
                      placeholder: t('profile.instagram_placeholder') %>
                </div>
              </div>

              <!-- TikTok -->
              <div class="relative">
                <%= f.label :tiktok_username, t('profile.tiktok'), class: "block text-xs font-medium text-gray-600 dark:text-gray-400 mb-1" %>
                <div class="flex">
                  <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                    </svg>
                  </span>
                  <%= f.text_field :tiktok_username,
                      class: "flex-1 px-3 py-2.5 border-2 border-gray-200 dark:border-gray-600 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition dark:bg-gray-700 dark:text-gray-100 text-sm",
                      placeholder: t('profile.tiktok_placeholder') %>
                </div>
              </div>

              <!-- Twitter -->
              <div class="relative">
                <%= f.label :twitter_username, t('profile.twitter'), class: "block text-xs font-medium text-gray-600 dark:text-gray-400 mb-1" %>
                <div class="flex">
                  <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                  </span>
                  <%= f.text_field :twitter_username,
                      class: "flex-1 px-3 py-2.5 border-2 border-gray-200 dark:border-gray-600 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition dark:bg-gray-700 dark:text-gray-100 text-sm",
                      placeholder: t('profile.twitter_placeholder') %>
                </div>
              </div>

              <!-- LinkedIn -->
              <div class="relative">
                <%= f.label :linkedin_url, t('profile.linkedin'), class: "block text-xs font-medium text-gray-600 dark:text-gray-400 mb-1" %>
                <div class="flex">
                  <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                  </span>
                  <%= f.text_field :linkedin_url,
                      class: "flex-1 px-3 py-2.5 border-2 border-gray-200 dark:border-gray-600 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition dark:bg-gray-700 dark:text-gray-100 text-sm",
                      placeholder: t('profile.linkedin_placeholder') %>
                </div>
              </div>

              <!-- YouTube -->
              <div class="relative">
                <%= f.label :youtube_url, t('profile.youtube'), class: "block text-xs font-medium text-gray-600 dark:text-gray-400 mb-1" %>
                <div class="flex">
                  <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                    </svg>
                  </span>
                  <%= f.text_field :youtube_url,
                      class: "flex-1 px-3 py-2.5 border-2 border-gray-200 dark:border-gray-600 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 dark:focus:border-rose-400 transition dark:bg-gray-700 dark:text-gray-100 text-sm",
                      placeholder: t('profile.youtube_placeholder') %>
                </div>
              </div>

              <!-- Facebook -->
              <div class="relative">
                <%= f.label :facebook_url, t('profile.facebook'), class: "block text-xs font-medium text-gray-600 dark:text-gray-400 mb-1" %>
                <div class="flex">
                  <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
