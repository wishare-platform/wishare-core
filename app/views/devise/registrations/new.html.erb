<div class="min-h-screen bg-gray-50 flex flex-col justify-center px-4 py-8 sm:px-6 lg:px-8">
  <div class="mx-auto w-full max-w-sm sm:max-w-md">
    <div class="flex justify-center mb-8">
      <div class="flex items-center gap-3">
        <svg class="w-10 h-10 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046-.151-1.5-.454a2.704 2.704 0 01-1.042-.918 2.704 2.704 0 01-.454-1.5V8.546c0-.523.151-1.046.454-1.5.303-.454.631-.813 1.042-.918.453-.303.977-.454 1.5-.454s1.046.151 1.5.454c.411.105.739.464 1.042.918.303.454.454.977.454 1.5v4.128c0 .523-.151 1.046-.454 1.5a2.704 2.704 0 01-1.042.918c-.454.303-.977.454-1.5.454zM12 21a9 9 0 100-18 9 9 0 000 18z"></path>
        </svg>
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">WishShare</h1>
          <p class="text-sm text-gray-600">Share wishlists with your partner</p>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-auto w-full max-w-sm sm:max-w-md">
    <div class="bg-white py-8 px-6 shadow-lg rounded-2xl sm:rounded-xl sm:px-10 border border-gray-100">
      <h2 class="text-2xl font-bold text-gray-800 text-center mb-2">Create your account</h2>
      <% if params[:email].present? %>
        <div class="bg-teal-50 border border-teal-200 rounded-xl p-4 mb-6">
          <p class="text-sm text-teal-800 text-center">
            ğŸ <strong>You've been invited!</strong> Create your account to start sharing wishlists.
          </p>
        </div>
      <% else %>
        <p class="text-gray-600 text-center mb-8">Join WishShare and start sharing wishlists</p>
      <% end %>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :name, "Your name", class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <%= f.text_field :name, autofocus: true,
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition duration-200 bg-gray-50 focus:bg-white", 
                  placeholder: "Enter your name" %>
          </div>
        </div>

        <div>
          <%= f.label :email, "Email address", class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <%= f.email_field :email, autocomplete: "email", 
                  value: params[:email],
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition duration-200 bg-gray-50 focus:bg-white", 
                  placeholder: "Enter your email" %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-gray-800 mb-2" do %>
            Password
            <% if @minimum_password_length %>
              <span class="text-gray-500 font-normal">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
          <% end %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <%= f.password_field :password, autocomplete: "new-password",
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition duration-200 bg-gray-50 focus:bg-white",
                  placeholder: "Create a password" %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition duration-200 bg-gray-50 focus:bg-white",
                  placeholder: "Confirm your password" %>
          </div>
        </div>

        <div class="pt-2">
          <%= f.submit "Create account", class: "w-full bg-teal-600 text-white py-4 px-6 rounded-xl hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 transition duration-200 cursor-pointer font-semibold text-lg touch-manipulation" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
