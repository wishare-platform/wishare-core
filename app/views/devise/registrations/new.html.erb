<% content_for :title, "Create Account" %>
<% content_for :description, "Join Wishare to create and share wishlists with friends and family. Make gift-giving more thoughtful and organized for every occasion." %>

<div class="min-h-screen bg-gradient-to-br from-rose-50 via-amber-50 to-purple-50 flex flex-col justify-center px-4 py-8 sm:px-6 lg:px-8">
  <div class="mx-auto w-full max-w-sm sm:max-w-md">
    <div class="flex justify-center mb-8">
      <div class="flex items-center gap-3">
        <span class="text-4xl">ğŸ’</span>
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-rose-500 to-purple-600 bg-clip-text text-transparent">Wishare</h1>
          <p class="text-sm text-gray-600">Share wishlists with friends & family</p>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-auto w-full max-w-sm sm:max-w-md">
    <div class="bg-white/80 backdrop-blur-sm py-8 px-6 shadow-xl rounded-3xl sm:px-10 border border-rose-100">
      <h2 class="text-2xl font-bold text-gray-800 text-center mb-2">Create your account âœ¨</h2>
      <% if params[:email].present? %>
        <div class="bg-gradient-to-r from-rose-50 to-purple-50 border border-rose-200 rounded-xl p-4 mb-6">
          <p class="text-sm text-rose-800 text-center">
            ğŸ <strong>You've been invited!</strong> Create your account to start sharing wishlists.
          </p>
        </div>
      <% else %>
        <p class="text-gray-600 text-center mb-8">Join Wishare and start sharing wishlists with friends & family</p>
      <% end %>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :name, "Your name", class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <%= f.text_field :name, autofocus: true,
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white", 
                  placeholder: "Enter your name" %>
          </div>
        </div>

        <div>
          <%= f.label :email, "Email address", class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <%= f.email_field :email, autocomplete: "email", 
                  value: params[:email],
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white", 
                  placeholder: "Enter your email" %>
          </div>
        </div>

        <div>
          <%= f.label :date_of_birth, "Birthday (optional)", class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <%= f.date_field :date_of_birth, 
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white" %>
          </div>
          <p class="mt-2 text-xs text-gray-500">ğŸ“… Optional - helps friends remember your birthday and create better gift suggestions</p>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-gray-800 mb-2" do %>
            Password
            <% if @minimum_password_length %>
              <span class="text-gray-500 font-normal">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
          <% end %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <%= f.password_field :password, autocomplete: "new-password",
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white",
                  placeholder: "Create a password" %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white",
                  placeholder: "Confirm your password" %>
          </div>
        </div>

        <div class="pt-2">
          <%= f.submit "Create account", class: "w-full bg-gradient-to-r from-rose-500 to-rose-600 text-white py-4 px-6 rounded-xl hover:from-rose-600 hover:to-rose-700 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-2 transition duration-200 cursor-pointer font-semibold text-lg touch-manipulation shadow-lg" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
