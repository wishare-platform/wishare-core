<%- if devise_mapping.omniauthable? %>
  <div class="mt-6">
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-rose-200"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="bg-white px-2 text-gray-500"><%= t('auth.shared.or_continue_with') %></span>
      </div>
    </div>
    <div class="mt-6">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <% if controller_name == 'registrations' %>
          <%= button_to omniauth_authorize_path(resource_name, provider), 
              method: :post,
              data: { turbo: false, "terms-agreement-target": "googleButton" },
              disabled: true,
              class: "w-full flex justify-center items-center px-6 py-4 border-2 border-gray-200 rounded-xl shadow-sm text-base font-medium text-gray-400 bg-gray-50 cursor-not-allowed transition duration-200 opacity-50" do %>
            <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
<%= t('auth.shared.sign_in_with_google') %>
          <% end %>
        <% else %>
          <%= button_to omniauth_authorize_path(resource_name, provider), 
              method: :post,
              data: { turbo: false },
              class: "w-full flex justify-center items-center px-6 py-4 border-2 border-rose-200 rounded-xl shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-rose-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-400 transition duration-200 touch-manipulation" do %>
            <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
<%= t('auth.shared.sign_in_with_google') %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="mt-8 text-center space-y-4">
  <%- if controller_name != 'sessions' %>
    <%= link_to t('auth.shared.sign_in_instead'), new_session_path(resource_name), class: "inline-block py-2 px-4 text-base text-rose-600 hover:text-rose-700 font-medium transition duration-200 touch-manipulation" %>
  <% end %>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('auth.shared.create_account'), new_registration_path(resource_name), class: "inline-block py-2 px-4 text-base text-rose-600 hover:text-rose-700 font-medium transition duration-200 touch-manipulation" %>
  <% end %>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="pt-2">
      <%= link_to t('auth.shared.forgot_password'), new_password_path(resource_name), class: "inline-block py-2 px-4 text-sm text-gray-500 hover:text-gray-700 transition duration-200 touch-manipulation" %>
    </div>
  <% end %>
</div>
