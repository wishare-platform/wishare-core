<% content_for :title, wishlist_item_meta_title(@wishlist_item) %>
<% content_for :description, wishlist_item_meta_description(@wishlist_item) %>
<% content_for :og_type, "product" %>
<% content_for :og_title, wishlist_item_meta_title(@wishlist_item) %>
<% content_for :og_description, wishlist_item_meta_description(@wishlist_item) %>
<% content_for :og_image, meta_image_url(@wishlist_item) %>
<% content_for :twitter_title, wishlist_item_meta_title(@wishlist_item) %>
<% content_for :twitter_description, wishlist_item_meta_description(@wishlist_item) %>
<% content_for :twitter_image, meta_image_url(@wishlist_item) %>

<div class="min-h-screen bg-gradient-to-br from-rose-50 via-amber-50 to-purple-50 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950"
     data-controller="item-delight"
     data-item-delight-item-name-value="<%= @wishlist_item.name %>"
     data-item-delight-wishlist-name-value="<%= @wishlist.name %>"
     data-item-delight-is-purchased-value="<%= @wishlist_item.purchased? %>">

  <!-- Mobile-First Container -->
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">

    <!-- Breadcrumb Navigation -->
    <div class="mb-6" data-item-delight-target="breadcrumb">
      <%= link_to @wishlist, class: "inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-rose-600 dark:hover:text-rose-400 transition duration-200", data: { action: "mouseenter->item-delight#onBreadcrumbHover mouseleave->item-delight#onBreadcrumbLeave" } do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <%= t('wishlists.show.back_to_wishlist', name: @wishlist.name) %>
      <% end %>
    </div>

    <!-- Main Product Card -->
    <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-3xl border border-rose-100 dark:border-gray-700 shadow-2xl overflow-hidden"
         data-item-delight-target="mainCard"
         data-action="mouseenter->item-delight#onCardHover mouseleave->item-delight#onCardLeave">

      <!-- Desktop: Side-by-side layout, Mobile: Stacked -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-0 min-h-[600px]">

        <!-- Product Image Section -->
        <div class="relative lg:min-h-[600px]">
          <% if @wishlist_item.image_url.present? %>
            <div class="aspect-square lg:h-full w-full overflow-hidden lg:rounded-l-3xl">
              <%= image_tag @wishlist_item.image_url,
                  class: "w-full h-full object-cover transition-transform duration-500 hover:scale-105",
                  alt: @wishlist_item.name %>
            </div>
          <% else %>
            <div class="aspect-square lg:h-full bg-gradient-to-br from-rose-100 via-pink-100 to-amber-100 dark:from-rose-900/30 dark:via-pink-900/30 dark:to-amber-900/30 flex flex-col items-center justify-center">
              <div class="text-9xl mb-6 animate-bounce">üéÅ</div>
              <div class="text-center px-6">
                <div class="text-rose-600 dark:text-rose-400 font-bold text-3xl font-display mb-2">Wishare</div>
                <div class="text-rose-500 dark:text-rose-500 text-xl"><%= t('wishlists.show.gift_placeholder') %></div>
              </div>
            </div>
          <% end %>

          <!-- Purchased Overlay -->
          <% if @wishlist_item.purchased? %>
            <div class="absolute inset-0 bg-black/40 backdrop-blur-sm flex items-center justify-center">
              <div class="bg-green-600 text-white px-6 py-3 rounded-2xl text-xl font-semibold flex items-center gap-3 shadow-2xl">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <%= t('wishlists.show.purchased') %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Product Information Section -->
        <div class="p-8 lg:p-12 flex flex-col justify-between">

          <!-- Header Section -->
          <div class="space-y-6">

            <!-- Title and Actions -->
            <div class="flex justify-between items-start gap-4">
              <div class="flex-1 min-w-0">
                <h1 class="heading-page text-gray-900 dark:text-gray-100 mb-3 break-words leading-tight"
                    data-item-delight-target="itemTitle">
                  <%= @wishlist_item.name %>
                </h1>
                <p class="text-lg text-gray-600 dark:text-gray-400">
                  <%= t('wishlists.show.from_wishlist', wishlist: @wishlist.name, user: @wishlist.user.name || @wishlist.user.email) %>
                </p>
              </div>

              <!-- Owner Actions -->
              <% if @wishlist.user == current_user %>
                <div class="flex gap-2 flex-shrink-0">
                  <%= link_to edit_wishlist_wishlist_item_path(@wishlist, @wishlist_item),
                      class: "p-3 text-gray-400 dark:text-gray-500 hover:text-rose-500 dark:hover:text-rose-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-xl transition duration-200",
                      title: t('wishlists.show.edit_item') do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  <%= button_to wishlist_wishlist_item_path(@wishlist, @wishlist_item), {
                      method: :delete,
                      data: { confirm: t('wishlists.show.delete_item_confirm', name: @wishlist_item.name) },
                      class: "p-3 text-gray-400 dark:text-gray-500 hover:text-red-500 dark:hover:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-xl transition duration-200 border-none bg-transparent cursor-pointer",
                      title: t('wishlists.show.delete_item')
                    } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>

            <!-- Description -->
            <% if @wishlist_item.description.present? %>
              <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed text-lg">
                  <%= simple_format(@wishlist_item.description) %>
                </p>
              </div>
            <% end %>

            <!-- Price and Priority Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <!-- Price Card -->
              <div class="bg-gradient-to-r from-rose-50 to-pink-50 dark:from-rose-900/20 dark:to-pink-900/20 rounded-2xl p-6">
                <div class="text-sm text-rose-700 dark:text-rose-400 font-semibold mb-2 uppercase tracking-wide">
                  <%= t('wishlists.show.price') %>
                </div>
                <% if @wishlist_item.price.present? %>
                  <div class="text-3xl font-bold text-gray-900 dark:text-gray-100">
                    <%= @wishlist_item.formatted_price %>
                  </div>
                <% else %>
                  <div class="text-xl text-gray-500 dark:text-gray-400">
                    <%= t('wishlists.show.price_not_set') %>
                  </div>
                <% end %>
              </div>

              <!-- Priority Card -->
              <div class="bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 rounded-2xl p-6">
                <div class="text-sm text-amber-700 dark:text-amber-400 font-semibold mb-2 uppercase tracking-wide">
                  <%= t('wishlists.show.priority') %>
                </div>
                <div class="flex items-center gap-3">
                  <span class="px-4 py-2 rounded-xl text-lg font-semibold <%= @wishlist_item.priority == 'high' ? 'bg-rose-500 text-white' : @wishlist_item.priority == 'medium' ? 'bg-rose-100 dark:bg-rose-900/30 text-rose-700 dark:text-rose-300' : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300' %>">
                    <%= t("items.form.priority_label.#{@wishlist_item.priority}") %>
                  </span>
                </div>
              </div>
            </div>

            <!-- Added Date -->
            <% if @wishlist_item.created_at %>
              <div class="flex items-center gap-2 text-gray-500 dark:text-gray-400">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span><%= t('wishlists.show.added_on', date: l(@wishlist_item.created_at, format: :long)) %></span>
              </div>
            <% end %>
          </div>

          <!-- Actions Section -->
          <div class="space-y-4 mt-8">
            <% unless @wishlist_item.purchased? %>
              <!-- Available Item Actions -->
              <div class="flex flex-col sm:flex-row gap-4">
                <% if @wishlist_item.safe_url.present? %>
                  <%= link_to @wishlist_item.safe_url,
                      target: "_blank",
                      rel: "noopener noreferrer",
                      class: "flex-1 text-center bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-8 py-4 rounded-2xl hover:bg-gray-200 dark:hover:bg-gray-600 transition duration-200 font-semibold text-lg flex items-center justify-center gap-3" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    <%= t('wishlists.show.view_item') %>
                  <% end %>
                <% end %>

                <% if @wishlist.user != current_user %>
                  <%= button_to purchase_wishlist_wishlist_item_path(@wishlist, @wishlist_item), {
                      method: :patch,
                      class: "flex-1 bg-gradient-to-r from-rose-500 to-pink-500 text-white px-8 py-4 rounded-2xl hover:from-rose-600 hover:to-pink-600 transition-all duration-200 font-semibold text-lg cursor-pointer shadow-xl transform hover:scale-105",
                      data: { "item-delight-target": "purchaseButton", action: "click->item-delight#onPurchaseClick" }
                    } do %>
                    <span class="flex items-center justify-center gap-3">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <%= t('wishlists.show.mark_purchased') %>
                    </span>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <!-- Purchased Item State -->
              <% if @wishlist_item.purchased_by %>
                <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-700 rounded-2xl p-6">
                  <div class="flex items-center gap-3 mb-4">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-green-700 dark:text-green-300 font-semibold text-lg">
                      <%= t('wishlists.show.purchased_by', buyer: @wishlist_item.purchased_by.name || @wishlist_item.purchased_by.email) %>
                    </span>
                  </div>

                  <div class="flex flex-col sm:flex-row gap-3">
                    <% if @wishlist_item.purchased_by == current_user %>
                      <%= button_to unpurchase_wishlist_wishlist_item_path(@wishlist, @wishlist_item), {
                          method: :patch,
                          class: "bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-6 py-3 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition duration-200 font-medium"
                        } do %>
                        <%= t('wishlists.show.mark_as_available') %>
                      <% end %>
                    <% elsif @wishlist_item.safe_url.present? %>
                      <%= link_to @wishlist_item.safe_url,
                          target: "_blank",
                          rel: "noopener noreferrer",
                          class: "text-center bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-6 py-3 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition duration-200 font-medium flex items-center justify-center gap-2" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                        <%= t('wishlists.show.view_item') %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>

            <!-- Share Button -->
            <div class="flex justify-center pt-4">
              <button data-item-delight-target="shareButton"
                      data-action="click->item-delight#onShareClick"
                      class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white rounded-2xl transition-all duration-200 font-semibold text-lg shadow-xl transform hover:scale-105">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                </svg>
                <%= t('common.share.button') %>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Sticky Action Bar -->
  <% unless @wishlist_item.purchased? %>
    <div class="fixed bottom-20 left-0 right-0 lg:hidden bg-white/95 dark:bg-gray-800/95 backdrop-blur-sm border-t border-rose-100 dark:border-gray-700 p-4 shadow-2xl z-50">
      <div class="flex gap-3 max-w-4xl mx-auto">
        <% if @wishlist_item.safe_url.present? %>
          <%= link_to @wishlist_item.safe_url,
              target: "_blank",
              rel: "noopener noreferrer",
              class: "flex-1 text-center bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 py-4 rounded-2xl font-semibold flex items-center justify-center gap-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            <%= t('wishlists.show.view_item') %>
          <% end %>
        <% end %>

        <% if @wishlist.user != current_user %>
          <%= button_to purchase_wishlist_wishlist_item_path(@wishlist, @wishlist_item), {
              method: :patch,
              class: "flex-2 bg-gradient-to-r from-rose-500 to-pink-500 text-white py-4 px-6 rounded-2xl font-semibold cursor-pointer shadow-xl"
            } do %>
            <span class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <%= t('wishlists.show.mark_purchased') %>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Hidden elements for effects -->
  <div data-item-delight-target="shareConfetti" class="hidden"></div>
  <div data-item-delight-target="purchaseSuccess" class="hidden"></div>
</div>