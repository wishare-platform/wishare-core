<% content_for :title, t('profile.edit_title') %>
<% content_for :description, t('profile.edit_subtitle') %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-lg border border-gray-200 dark:border-gray-700 p-6 sm:p-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
      <div>
        <h1 class="heading-page text-gray-800 dark:text-gray-100"><%= t('profile.edit_title') %></h1>
        <p class="text-body text-gray-600 dark:text-gray-400 mt-1"><%= t('profile.edit_subtitle') %></p>
      </div>
      <%= link_to profile_path, class: "bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-6 py-3 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition duration-200 font-medium" do %>
        <svg class="w-4 h-4 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <%= t('common.actions.back') %>
      <% end %>
    </div>

    <%= form_with(model: @user, url: profile_path, local: true, multipart: true) do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-600 dark:text-red-400 px-4 py-3 rounded-xl mb-6">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h3 class="font-semibold mb-2 text-red-700 dark:text-red-300">Please fix the following errors:</h3>
              <ul class="list-disc list-inside space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Avatar Upload Section -->
        <div class="lg:col-span-1">
          <div class="bg-gradient-to-br from-rose-50 to-amber-50 dark:from-rose-900/20 dark:to-amber-900/20 rounded-2xl p-6">
            <h3 class="heading-section text-gray-800 dark:text-gray-100 mb-4 text-center">Profile Photo</h3>

            <div data-controller="avatar-upload" class="text-center">
              <div class="relative inline-block mb-4">
                <% if @user.avatar.attached? %>
                  <%= image_tag @user.profile_avatar_url(:large),
                      class: "w-32 h-32 rounded-full object-cover mx-auto shadow-lg",
                      alt: @user.name,
                      data: { avatar_upload_target: "preview" } %>
                <% elsif @user.read_attribute(:avatar_url).present? %>
                  <%= image_tag @user.read_attribute(:avatar_url),
                      class: "w-32 h-32 rounded-full object-cover mx-auto shadow-lg",
                      alt: @user.name,
                      data: { avatar_upload_target: "preview" } %>
                <% else %>
                  <div class="w-32 h-32 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center mx-auto shadow-lg"
                       data-avatar-upload-target="preview">
                    <svg class="w-16 h-16 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                <% end %>

                <!-- Camera overlay -->
                <button type="button"
                        data-action="click->avatar-upload#openCamera"
                        class="absolute bottom-0 right-0 w-10 h-10 bg-rose-500 hover:bg-rose-600 text-white rounded-full flex items-center justify-center shadow-lg transition duration-200">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </button>
              </div>

              <!-- File input -->
              <input type="file"
                     accept="image/*"
                     capture="user"
                     data-avatar-upload-target="input"
                     data-action="change->avatar-upload#previewImage"
                     class="hidden">

              <!-- Upload buttons -->
              <div class="space-y-2">
                <button type="button"
                        data-action="click->avatar-upload#openFileDialog"
                        class="w-full bg-rose-500 hover:bg-rose-600 text-white px-4 py-2 rounded-lg transition duration-200 text-sm font-medium">
                  Choose Photo
                </button>

                <% if @user.avatar.attached? || @user.read_attribute(:avatar_url).present? %>
                  <button type="button"
                          data-action="click->avatar-upload#removeAvatar"
                          class="w-full bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition duration-200 text-sm font-medium">
                    Remove Photo
                  </button>
                <% end %>
              </div>

              <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                Recommended: Square image, at least 200x200px
              </p>
            </div>
          </div>
        </div>

        <!-- Form Fields -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Personal Information -->
          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
            <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4">Personal Information</h3>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <%= form.label :name, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.text_field :name, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100", placeholder: "Your full name" %>
              </div>

              <div>
                <%= form.label :email, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.email_field :email, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100", placeholder: "your@email.com" %>
              </div>

              <div>
                <%= form.label :date_of_birth, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.date_field :date_of_birth, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" %>
              </div>

              <div>
                <%= form.label :preferred_locale, "Language", class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.select :preferred_locale, [['English', 'en'], ['PortuguÃªs (BR)', 'pt-BR']], {}, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" %>
              </div>
            </div>
          </div>

          <!-- Bio & Social Media -->
          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
            <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4">Bio & Social Media</h3>

            <!-- Bio Section -->
            <div class="mb-6">
              <%= form.label :bio, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
              <div class="relative">
                <%= form.text_area :bio, rows: 4, maxlength: 500,
                    class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 resize-none",
                    placeholder: "Tell us about yourself...",
                    data: { controller: "character-counter", character_counter_max_value: 500 } %>
                <div class="absolute bottom-3 right-3 text-xs text-gray-500 dark:text-gray-400">
                  <span data-character-counter-target="count">0</span>/500
                </div>
              </div>

              <div class="mt-2">
                <%= form.label :bio_visibility, "Bio Visibility", class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.select :bio_visibility, options_for_select([['Private', 'private'], ['Connected Users Only', 'connected_users'], ['Public', 'public']], @user.bio_visibility), {},
                    class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" %>
              </div>
            </div>

            <!-- Gender -->
            <div class="mb-6">
              <%= form.label :gender, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
              <%= form.select :gender, options_for_select([['Not Specified', 'not_specified'], ['Male', 'male'], ['Female', 'female'], ['Non-Binary', 'non_binary'], ['Prefer Not to Say', 'prefer_not_to_say']], @user.gender), {},
                  class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" %>
            </div>

            <!-- Website -->
            <div class="mb-6">
              <%= form.label :website, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
              <%= form.text_field :website,
                  class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100",
                  placeholder: "https://yourwebsite.com" %>

              <div class="mt-2">
                <%= form.label :website_visibility, "Website Visibility", class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.select :website_visibility, options_for_select([['Private', 'private'], ['Connected Users Only', 'connected_users'], ['Public', 'public']], @user.website_visibility), {},
                    class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" %>
              </div>
            </div>

            <!-- Social Media Links -->
            <div class="space-y-4">
              <h4 class="text-sm font-semibold text-gray-800 dark:text-gray-200">Social Media Links</h4>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <!-- Instagram -->
                <div class="relative">
                  <%= form.label :instagram_username, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                  <div class="flex">
                    <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-rose-200 dark:border-rose-800 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
                      </svg>
                    </span>
                    <%= form.text_field :instagram_username,
                        class: "flex-1 px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100",
                        placeholder: "username" %>
                  </div>
                </div>

                <!-- TikTok -->
                <div class="relative">
                  <%= form.label :tiktok_username, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                  <div class="flex">
                    <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-rose-200 dark:border-rose-800 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                      </svg>
                    </span>
                    <%= form.text_field :tiktok_username,
                        class: "flex-1 px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100",
                        placeholder: "username" %>
                  </div>
                </div>

                <!-- Twitter -->
                <div class="relative">
                  <%= form.label :twitter_username, "X (Twitter)", class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                  <div class="flex">
                    <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-rose-200 dark:border-rose-800 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                      </svg>
                    </span>
                    <%= form.text_field :twitter_username,
                        class: "flex-1 px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100",
                        placeholder: "username" %>
                  </div>
                </div>

                <!-- LinkedIn -->
                <div class="relative">
                  <%= form.label :linkedin_url, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                  <div class="flex">
                    <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-rose-200 dark:border-rose-800 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                      </svg>
                    </span>
                    <%= form.text_field :linkedin_url,
                        class: "flex-1 px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100",
                        placeholder: "https://linkedin.com/in/username" %>
                  </div>
                </div>

                <!-- YouTube -->
                <div class="relative">
                  <%= form.label :youtube_url, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                  <div class="flex">
                    <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-rose-200 dark:border-rose-800 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                      </svg>
                    </span>
                    <%= form.text_field :youtube_url,
                        class: "flex-1 px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100",
                        placeholder: "https://youtube.com/@channel" %>
                  </div>
                </div>

                <!-- Facebook -->
                <div class="relative">
                  <%= form.label :facebook_url, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                  <div class="flex">
                    <span class="inline-flex items-center px-3 rounded-l-xl border-2 border-r-0 border-rose-200 dark:border-rose-800 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    </span>
                    <%= form.text_field :facebook_url,
                        class: "flex-1 px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-r-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100",
                        placeholder: "https://facebook.com/username" %>
                  </div>
                </div>
              </div>

              <div class="mt-4">
                <%= form.label :social_links_visibility, "Social Links Visibility", class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.select :social_links_visibility, options_for_select([['Private', 'private'], ['Connected Users Only', 'connected_users'], ['Public', 'public']], @user.social_links_visibility), {},
                    class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" %>
              </div>
            </div>
          </div>

          <!-- Address Information -->
          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
            <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4">Address Information</h3>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div class="sm:col-span-2">
                <%= form.label :street_address, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.text_field :street_address, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100", placeholder: "Street address" %>
              </div>

              <div>
                <%= form.label :street_number, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.text_field :street_number, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100", placeholder: "Number" %>
              </div>

              <div>
                <%= form.label :apartment_unit, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.text_field :apartment_unit, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100", placeholder: "Apt/Unit (optional)" %>
              </div>

              <div>
                <%= form.label :city, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.text_field :city, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100", placeholder: "City" %>
              </div>

              <div>
                <%= form.label :state, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.text_field :state, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100", placeholder: "State/Province" %>
              </div>

              <div>
                <%= form.label :postal_code, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.text_field :postal_code, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100", placeholder: "Postal code" %>
              </div>

              <div>
                <%= form.label :country, class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
                <%= form.select :country, [['United States', 'US'], ['Brazil', 'BR'], ['Canada', 'CA'], ['United Kingdom', 'GB']], { include_blank: 'Select country' }, class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-3 pt-6 justify-end">
        <%= link_to profile_path, class: "bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-8 py-3 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition duration-200 font-medium" do %>
          Cancel
        <% end %>
        <%= form.submit "Save Changes", class: "bg-gradient-to-r from-rose-500 to-rose-600 text-white px-8 py-3 rounded-xl hover:from-rose-600 hover:to-rose-700 transition duration-200 cursor-pointer font-medium shadow-lg" %>
      </div>
    <% end %>
  </div>
</div>