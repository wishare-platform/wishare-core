<% content_for :title, t('profile.title') %>
<% content_for :description, t('profile.subtitle') %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-lg border border-gray-200 dark:border-gray-700 p-6 sm:p-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
      <div>
        <h1 class="heading-page text-gray-800 dark:text-gray-100"><%= t('profile.title') %></h1>
        <p class="text-body text-gray-600 dark:text-gray-400 mt-1"><%= t('profile.subtitle') %></p>
      </div>
      <%= link_to edit_profile_path, class: "bg-gradient-to-r from-rose-500 to-rose-600 text-white px-6 py-3 rounded-xl hover:from-rose-600 hover:to-rose-700 transition duration-200 font-medium shadow-lg" do %>
        <svg class="w-4 h-4 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        <%= t('profile.edit') %>
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Avatar Section -->
      <div class="lg:col-span-1">
        <div class="bg-gradient-to-br from-rose-50 to-amber-50 dark:from-rose-900/20 dark:to-amber-900/20 rounded-2xl p-6 text-center">
          <div class="relative inline-block mb-4">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.profile_avatar_url(:large), class: "w-32 h-32 rounded-full object-cover mx-auto shadow-lg", alt: @user.name %>
            <% elsif @user.read_attribute(:avatar_url).present? %>
              <%= image_tag @user.read_attribute(:avatar_url), class: "w-32 h-32 rounded-full object-cover mx-auto shadow-lg", alt: @user.name %>
            <% else %>
              <div class="w-32 h-32 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center mx-auto shadow-lg">
                <svg class="w-16 h-16 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
            <% end %>
          </div>
          <h2 class="heading-section text-gray-800 dark:text-gray-100 mb-2"><%= @user.name %></h2>
          <p class="text-body text-gray-600 dark:text-gray-400 mb-1"><%= @user.email %></p>
          <% if @user.date_of_birth.present? %>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              <%= t('profile.birthday') %>: <%= @user.date_of_birth.strftime("%B %d, %Y") %>
            </p>
          <% end %>
        </div>
      </div>

      <!-- Profile Details -->
      <div class="lg:col-span-2">
        <div class="space-y-6">
          <!-- Personal Information -->
          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
            <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <%= t('profile.personal_info') %>
            </h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label class="text-sm font-medium text-gray-600 dark:text-gray-300 block mb-1"><%= t('profile.name') %></label>
                <p class="text-gray-800 dark:text-gray-100"><%= @user.name %></p>
              </div>
              <div>
                <label class="text-sm font-medium text-gray-600 dark:text-gray-300 block mb-1"><%= t('profile.email') %></label>
                <p class="text-gray-800 dark:text-gray-100"><%= @user.email %></p>
              </div>
              <% if @user.date_of_birth.present? %>
                <div>
                  <label class="text-sm font-medium text-gray-600 dark:text-gray-300 block mb-1"><%= t('profile.birthday') %></label>
                  <p class="text-gray-800 dark:text-gray-100"><%= @user.date_of_birth.strftime("%B %d, %Y") %></p>
                </div>
              <% end %>
              <div>
                <label class="text-sm font-medium text-gray-600 dark:text-gray-300 block mb-1"><%= t('profile.language') %></label>
                <p class="text-gray-800 dark:text-gray-100">
                  <%= @user.preferred_locale == 'pt-BR' ? 'PortuguÃªs (BR)' : 'English' %>
                </p>
              </div>
            </div>
          </div>

          <!-- Bio Section -->
          <% if @user.bio.present? && @user.can_view_bio?(current_user) %>
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
              <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                About
              </h3>
              <p class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap"><%= @user.bio %></p>
            </div>
          <% end %>

          <!-- Social Media & Website -->
          <% if (@user.has_social_presence? && @user.can_view_social_links?(current_user)) || (@user.website.present? && @user.can_view_website?(current_user)) %>
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
              <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                </svg>
                Social Links
              </h3>

              <!-- Website -->
              <% if @user.website.present? && @user.can_view_website?(current_user) %>
                <div class="mb-4">
                  <a href="<%= @user.website %>" target="_blank" rel="noopener noreferrer"
                     class="inline-flex items-center gap-2 text-rose-600 dark:text-rose-400 hover:text-rose-700 dark:hover:text-rose-300 transition duration-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                    </svg>
                    <%= URI.parse(@user.website).host rescue @user.website %>
                  </a>
                </div>
              <% end %>

              <!-- Social Media Icons -->
              <% if @user.has_social_presence? && @user.can_view_social_links?(current_user) %>
                <div class="flex flex-wrap gap-3">
                  <% if @user.instagram_username.present? %>
                    <a href="<%= @user.formatted_social_url(:instagram) %>" target="_blank" rel="noopener noreferrer"
                       class="inline-flex items-center justify-center w-10 h-10 bg-gradient-to-br from-purple-600 to-pink-500 text-white rounded-lg hover:opacity-80 transition duration-200">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
                      </svg>
                    </a>
                  <% end %>

                  <% if @user.tiktok_username.present? %>
                    <a href="<%= @user.formatted_social_url(:tiktok) %>" target="_blank" rel="noopener noreferrer"
                       class="inline-flex items-center justify-center w-10 h-10 bg-black text-white rounded-lg hover:bg-gray-800 transition duration-200">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                      </svg>
                    </a>
                  <% end %>

                  <% if @user.twitter_username.present? %>
                    <a href="<%= @user.formatted_social_url(:twitter) %>" target="_blank" rel="noopener noreferrer"
                       class="inline-flex items-center justify-center w-10 h-10 bg-black text-white rounded-lg hover:bg-gray-800 transition duration-200">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                      </svg>
                    </a>
                  <% end %>

                  <% if @user.linkedin_url.present? %>
                    <a href="<%= @user.linkedin_url %>" target="_blank" rel="noopener noreferrer"
                       class="inline-flex items-center justify-center w-10 h-10 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                      </svg>
                    </a>
                  <% end %>

                  <% if @user.youtube_url.present? %>
                    <a href="<%= @user.youtube_url %>" target="_blank" rel="noopener noreferrer"
                       class="inline-flex items-center justify-center w-10 h-10 bg-red-600 text-white rounded-lg hover:bg-red-700 transition duration-200">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                      </svg>
                    </a>
                  <% end %>

                  <% if @user.facebook_url.present? %>
                    <a href="<%= @user.facebook_url %>" target="_blank" rel="noopener noreferrer"
                       class="inline-flex items-center justify-center w-10 h-10 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition duration-200">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    </a>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Address Information -->
          <% if @user.street_address.present? %>
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
              <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <%= t('profile.address') %>
              </h3>
              <div class="text-gray-800 dark:text-gray-100">
                <p><%= [@user.street_number, @user.street_address].compact.join(' ') %></p>
                <% if @user.apartment_unit.present? %>
                  <p><%= @user.apartment_unit %></p>
                <% end %>
                <p><%= [@user.city, @user.state, @user.postal_code].compact.join(', ') %></p>
                <p><%= @user.country %></p>
              </div>
            </div>
          <% end %>

          <!-- Statistics -->
          <div class="bg-gradient-to-r from-rose-50 to-amber-50 dark:from-rose-900/20 dark:to-amber-900/20 rounded-2xl p-6">
            <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <%= t('profile.statistics') %>
            </h3>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
              <div class="text-center">
                <p class="text-2xl font-bold text-rose-600 dark:text-rose-400"><%= @user.wishlists.count %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400"><%= t('navigation.wishlists') %></p>
              </div>
              <div class="text-center">
                <p class="text-2xl font-bold text-rose-600 dark:text-rose-400"><%= @user.accepted_connections.count %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400"><%= t('navigation.connections') %></p>
              </div>
              <div class="text-center">
                <p class="text-2xl font-bold text-rose-600 dark:text-rose-400"><%= @user.wishlists.sum { |w| w.wishlist_items.count } %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400"><%= t('profile.total_items') %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>