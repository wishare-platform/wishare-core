<% content_for :title, t('profile.title') %>
<% content_for :description, t('profile.subtitle') %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-lg border border-gray-200 dark:border-gray-700 p-6 sm:p-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
      <div>
        <h1 class="heading-page text-gray-800 dark:text-gray-100"><%= t('profile.title') %></h1>
        <p class="text-body text-gray-600 dark:text-gray-400 mt-1"><%= t('profile.subtitle') %></p>
      </div>
      <%= link_to edit_profile_path, class: "bg-gradient-to-r from-rose-500 to-rose-600 text-white px-6 py-3 rounded-xl hover:from-rose-600 hover:to-rose-700 transition duration-200 font-medium shadow-lg" do %>
        <svg class="w-4 h-4 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        <%= t('profile.edit') %>
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Avatar Section -->
      <div class="lg:col-span-1">
        <div class="bg-gradient-to-br from-rose-50 to-amber-50 dark:from-rose-900/20 dark:to-amber-900/20 rounded-2xl p-6 text-center">
          <div class="relative inline-block mb-4">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.profile_avatar_url(:large), class: "w-32 h-32 rounded-full object-cover mx-auto shadow-lg", alt: @user.name %>
            <% elsif @user.read_attribute(:avatar_url).present? %>
              <%= image_tag @user.read_attribute(:avatar_url), class: "w-32 h-32 rounded-full object-cover mx-auto shadow-lg", alt: @user.name %>
            <% else %>
              <div class="w-32 h-32 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center mx-auto shadow-lg">
                <svg class="w-16 h-16 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
            <% end %>
          </div>
          <h2 class="heading-section text-gray-800 dark:text-gray-100 mb-2"><%= @user.name %></h2>
          <p class="text-body text-gray-600 dark:text-gray-400 mb-1"><%= @user.email %></p>
          <% if @user.date_of_birth.present? %>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              <%= t('profile.birthday') %>: <%= @user.date_of_birth.strftime("%B %d, %Y") %>
            </p>
          <% end %>
        </div>
      </div>

      <!-- Profile Details -->
      <div class="lg:col-span-2">
        <div class="space-y-6">
          <!-- Personal Information -->
          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
            <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <%= t('profile.personal_info') %>
            </h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label class="text-sm font-medium text-gray-600 dark:text-gray-300 block mb-1"><%= t('profile.name') %></label>
                <p class="text-gray-800 dark:text-gray-100"><%= @user.name %></p>
              </div>
              <div>
                <label class="text-sm font-medium text-gray-600 dark:text-gray-300 block mb-1"><%= t('profile.email') %></label>
                <p class="text-gray-800 dark:text-gray-100"><%= @user.email %></p>
              </div>
              <% if @user.date_of_birth.present? %>
                <div>
                  <label class="text-sm font-medium text-gray-600 dark:text-gray-300 block mb-1"><%= t('profile.birthday') %></label>
                  <p class="text-gray-800 dark:text-gray-100"><%= @user.date_of_birth.strftime("%B %d, %Y") %></p>
                </div>
              <% end %>
              <div>
                <label class="text-sm font-medium text-gray-600 dark:text-gray-300 block mb-1"><%= t('profile.language') %></label>
                <p class="text-gray-800 dark:text-gray-100">
                  <%= @user.preferred_locale == 'pt-BR' ? 'PortuguÃªs (BR)' : 'English' %>
                </p>
              </div>
            </div>
          </div>

          <!-- Address Information -->
          <% if @user.street_address.present? %>
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-6">
              <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <%= t('profile.address') %>
              </h3>
              <div class="text-gray-800 dark:text-gray-100">
                <p><%= [@user.street_number, @user.street_address].compact.join(' ') %></p>
                <% if @user.apartment_unit.present? %>
                  <p><%= @user.apartment_unit %></p>
                <% end %>
                <p><%= [@user.city, @user.state, @user.postal_code].compact.join(', ') %></p>
                <p><%= @user.country %></p>
              </div>
            </div>
          <% end %>

          <!-- Statistics -->
          <div class="bg-gradient-to-r from-rose-50 to-amber-50 dark:from-rose-900/20 dark:to-amber-900/20 rounded-2xl p-6">
            <h3 class="heading-card text-gray-800 dark:text-gray-100 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <%= t('profile.statistics') %>
            </h3>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
              <div class="text-center">
                <p class="text-2xl font-bold text-rose-600 dark:text-rose-400"><%= @user.wishlists.count %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400"><%= t('navigation.wishlists') %></p>
              </div>
              <div class="text-center">
                <p class="text-2xl font-bold text-rose-600 dark:text-rose-400"><%= @user.accepted_connections.count %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400"><%= t('navigation.connections') %></p>
              </div>
              <div class="text-center">
                <p class="text-2xl font-bold text-rose-600 dark:text-rose-400"><%= @user.wishlists.sum { |w| w.wishlist_items.count } %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400"><%= t('profile.total_items') %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>